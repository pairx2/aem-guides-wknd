{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "jQuery": "readonly",
        "process": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "object-curly-spacing": ["error", "never"],
        "no-trailing-spaces": "error",
        "complexity": [0, { "max": 4 }],
        "no-magic-numbers": 0,
        "no-var": "error",
        "prefer-const": "error",
        "prefer-arrow-callback": "error",
        "indent": ["error", "tab", { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-class-assign": 0,
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "react/boolean-prop-naming": ["error", { "rule": "(^(is|has|can|show)[A-Z]([A-Za-z0-9]?)+|^pristine)" }],
        "no-useless-escape": 0,
        "no-empty": "error",
        "no-empty-function": "error",
        "react/prop-types": ["error", { "ignore": [
            "className", "children", "handleSubmit", "submitting", "input", "meta", "change", "validate", "breakpoints", "currentBreakpoint", "formValues", "dispatch"
        ] }],
        "react/no-unused-state": "error",
        "react/default-props-match-prop-types": "error",
        "react/destructuring-assignment": [0, "always"],
        "react/forbid-foreign-prop-types": "error",
        "react/no-typos": "error",
        "react/no-this-in-sfc": "error",
        "react/no-unsafe": "error",
        "react/no-unused-prop-types": "error",
        "react/jsx-no-undef": [2, { "allowGlobals":true }],
        "react/prefer-read-only-props": "error",
        "react/prefer-stateless-function": "error",
        "react/self-closing-comp": "error",
        "react/sort-comp": 0,
        "react/style-prop-object": "error",
        "react/void-dom-elements-no-children": "error",
        "react/jsx-boolean-value": "error",
        "react/jsx-no-bind":["error", {"allowArrowFunctions":  true}],
        "react/jsx-no-useless-fragment": "error",
        "react/jsx-fragments": ["error", "syntax"],
        "react/jsx-pascal-case": "error",
        "react/jsx-no-literals": "error"
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "rules": {
                "no-empty-function": "off"
            }
        }
    ]
}