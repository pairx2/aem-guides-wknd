<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"  xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="My Account_Customer Info Display/Edit"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Heading"
                                    name="./heading"/>
                            <deactivateHeading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Deactivate Account Heading"
                                    name="./deactivateHeading"/>
                            <deactivateDescription
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Deactivate Account Description"
                                    name="./deactivateDescription"/>
                            <deactivateConfirmation
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Deactivate Account Confirmation Text"
                                    fieldDescription="Agreement text displayed alongside checkbox for user who wishes to cancel account"
                                    name="./deactivateConfirmation"/>
                            <deactivateRedirect
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Account Deactivated Page"
                                    fieldDescription="Direct user to configured page once they have canceled their account"
                                    name="./deactivateRedirect"
                                    rootPath="/content/adc/freestylelibrede"
                                    validation="cq-dialog-link-validation"
                                    required="{Boolean}true"/>
                            <enableTechnicalTrainingPopUp
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./enableTechnicalTrainingPopUp"
                                text="Enable/disable pop up check box?"
                                value="true"/>
                            <technicalTrainingPopUpHeading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Technical Training Pop-up Heading"
                                name="./technicalTrainingPopUpHeading"/>
                            <popUpMessage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Technical Training Pop-up Message"
                                name="./technicalTrainingPopUpMessage"/>
                            <ctaText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Technical Training Pop-up Button Text"
                                name="./cta/text"/>
                            <ctaType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Technical Training Pop-up Button Type"
                                name="./cta/type">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="abbott-platform/datasource/generic-list"
                                    path="/apps/adc/freestylelibrede/authoring/datasources/cta-types"/>
                            </ctaType>
                            <linkcontainer
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/container">
								<granite:data
									jcr:primaryType="nt:unstructured"
									showhidetargetvalue="link"/>
								<items jcr:primaryType="nt:unstructured">
									<link
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
										fieldLabel="Technical Training Pop-up Button Link"
										name="./cta/link"
										rootPath="/content/adc/freestylelibrede"/>
								</items>
							</linkcontainer>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
