<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Arvato Track and Trace Form"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Heading"
                                name="./heading"
                                required="{Boolean}true"/>
                            <subHeading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Sub Heading"
                                name="./subHeading"
                                required="{Boolean}false"/>
                            <orderIdText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Order ID Label"
                                name="./orderIDText"
                                required="{Boolean}true"/>
                            <orderIdPlaceHolderText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Order ID Place Holder Text"
                                name="./orderIdPlaceHolderText"/>
                            <orderIDValidationRegex
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Order ID Validation Regex"
                                name="./orderIDValidationRegex"
                                required="{Boolean}true"/>
                            <orderIDLength
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldLabel="Order ID Length"
                                name="./orderIDLength"
                                required="{Boolean}true"/>
                            <zipCodeText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Zip Code Label"
                                name="./zipCodeText"
                                required="{Boolean}true"/>
                            <zipCodePlaceHolderText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Zip Code Place Holder Text"
                                name="./zipCodePlaceHolderText"/>
                            <zipCodeValidationRegex
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Zip Code Validation Regex"
                                name="./zipCodeValidationRegex"
                                required="{Boolean}true"/>
                            <zipCodeLength
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldLabel="Zip Code Length"
                                name="./zipCodeLength"
                                required="{Boolean}true"/>
                            <submitButtonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Submit Button Text"
                                name="./submitButtonText"
                                required="{Boolean}true"/>
                            <submitCtaStyle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Submit CTA style"
                                name="./submitCtaStyle">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="abbott-platform/datasource/generic-list"
                                    path="/apps/adc/freestylelibrede/authoring/datasources/cta-types"/>
                            </submitCtaStyle>
							<arvatoScriptURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Arvato Script URL"
                                name="./arvatoScriptURL"
                                required="{Boolean}true"/>
							<successUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Success Link"
                                name="./successLink"
                                required="{Boolean}true"
								rootPath="/content/adc/"/>
                        </items>
                    </general>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
