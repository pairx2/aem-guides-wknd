<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Forgot Password"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <forgot-pwd
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Forgot Password Page"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <forgot-pwd-heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Forgot Password heading"
                                name="./forgotPasswordHeading"/>
                            <forgot-pwd-subheading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Forgot Password subheading"
                                name="./forgotPasswordSubheading"/>
                            <back-to-login
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Back to login CTA Text"
                                name="./backToLogin"/>
							<back-to-login-url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Back to login CTA URL"
								rootPath="/content/adc"
                                name="./backToLoginUrl"/>
                            <submit-cta
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Submit CTA Text"
                                name="./submitCtaText"/>
                            <myAccount
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="My Account URL"
                                emptyText="Enter My Account URL"
                                rootPath="/content/adc/"
                                name="./accountLink"/>
                        </items>
                    </forgot-pwd>
                    <forgot-pwd-confirmation
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Forgot Password Confirmation Page"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <confirmation-page-heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Confirmation Page Heading"
                                name="./confirmationPageHeading"/>
                            <confirmation-page-subheading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Confirmation page Subheading"
                                name="./confirmationPageSubheading"/>
                            <confirmation-page-image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Forgot Password Confirmation Image"
                                name="./forgotPasswordConfirmationImage"
                                required="{Boolean}true">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="abbott-platform/datasource/generic-list"
                                    path="adc/freestylelibrede/authoring/datasources/abbott-icons"/>
                            </confirmation-page-image>
                            <reader-informational-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Reader Informational Text"
                                name="./readerInformationalText"/>
                        </items>
                    </forgot-pwd-confirmation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
