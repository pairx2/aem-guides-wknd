<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	      xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:description="Header Login"
          jcr:primaryType="nt:unstructured"
          jcr:title="Header Login"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <fixedcolums
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <ui-rendition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="UI rendition of the component"
                                fieldLabel="Rendition"
                                name="./rendition">
                                <items jcr:primaryType="nt:unstructured">
                                    <v1
                                        jcr:primaryType="nt:unstructured"
                                        text="Version 1 (Old)"
                                        value="v1-rendition"/>
                                    <v2
                                        jcr:primaryType="nt:unstructured"
                                        text="Version 2 (New)"
                                        value="v2-rendition"/>
                                </items>
                            </ui-rendition>
                            <login-label
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Header Login anonymous Label"
                                    name="./labelLogin"/>
                            <icon-label
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Header Login authenticated Label"
                                    name="./label"/>

                            <icon-path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Header Login Icon"
                                    name="./icon">
                                <datasource
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="abbott-platform/datasource/generic-list"
                                        path="/apps/adc/freestylelibrede/authoring/datasources/abbott-icons"/>
                            </icon-path>
                            <offline-icon-path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Offline Icon"
                                    name="./offlineIcon">
                                <datasource
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="abbott-platform/datasource/generic-list"
                                        path="/apps/adc/freestylelibrede/authoring/datasources/abbott-icons"/>
                            </offline-icon-path>
                            <login-page-path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Login Page Path"
                                    name="./loginPagePath"
                                    rootPath="/content/adc"/>
                            <logout-page-redirect
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Logout Page Redirect"
                                    name="./logoutPageRedirect"
                                    rootPath="/content/adc"/>
                            <logout-icon-path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Logout Icon"
                                    name="./logoutIcon">
                                <datasource
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="abbott-platform/datasource/generic-list"
                                        path="/apps/adc/freestylelibrede/authoring/datasources/abbott-icons"/>
                            </logout-icon-path>
                            <logout-icon-label
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Logout Label"
                                    name="./logoutLabel"/>
                            <accountoverview-page-path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Account Overview Page Path"
                                    name="./pagePath"
                                    rootPath="/content"/>
                            <nonLoggedInUserEvent
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Non Logged In User Event"
                                    name="./nonLoggedInUserEvent"/>
                            <loggedInUserEvent
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Logged In User Event"
                                    name="./loggedInUserEvent"/>
							<enableAutoExtendSessionEsl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Enable auto-extend session (with ESL)"
                                name="./enableAutoExtendSessionEsl"
                                text="Enable auto-extend session (with ESL)"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                        </items>
                    </properties>
                </items>
            </fixedcolums>
        </items>
    </content>
</jcr:root>
