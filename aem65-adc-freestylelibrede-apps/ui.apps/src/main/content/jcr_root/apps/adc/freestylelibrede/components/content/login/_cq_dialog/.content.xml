<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Login"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Heading"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
						    <disable-registration jcr:primaryType="nt:unstructured"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                      name="./disableRegistration"
                                      text="Disable Registration"
                                      uncheckedValue="{Boolean}false"
                                      value="{Boolean}true"/>
							<greyLoginShowMsg
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./greyLoginShowMsg"
                                text="Grey-out login and show message"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <disableSocialLogin
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    name="./disableSocialLogin"
                                    text="Disable Social Login"
                                    uncheckedValue="{Boolean}false"
                                    value="{Boolean}true"/>
                            <loginHeading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Login Heading"
                                    name="./loginHeading"/>
                            <loginSubHeading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Login Sub Heading"
                                    name="./loginSubHeading"/>
                        </items>
                    </heading>
                    <sign-in
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Sign In"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <loginSectionText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Login Section Text"
                                    maxlength="{Long}45"
                                    name="./loginSectionText"/>
                            <loginButtonText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Login Button Text"
                                    maxlength="{Long}45"
                                    name="./loginButtonText"/>
                            <forgotPasswordText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Forgot Password Text"
                                    maxlength="{Long}45"
                                    name="./forgotPasswordText"/>
                            <forgotPasswordLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Forgot Password Link"
                                    emptyText="Enter Forgot Password URL"
                                    rootPath="/content/adc/"
                                    name="./forgotPasswordLink"/>
                            <success-url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Login Success Link"
								emptyText="Enter Success URL"
								rootPath="/content/adc/"
                                name="./loginSuccessLink"/>	  
							<disable-recaptcha
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./disableRecaptcha"
                                text="Disable Recaptcha"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <header-code
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Secret Code"
                                name="./headerCode"/>
                        </items>
                    </sign-in>
                    <sign-up
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Sign Up Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <sign-up-heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Signup Heading"
                                maxlength="{Long}30"
								emptyText="Enter the heading text for sign up block"
                                name="./signUpHeading"/>
                            <create-account
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Create Account Button Text"
								emptyText="Enter the text for the create account button"
                                maxlength="{Long}45"
                                name="./createAccount"/>
							<sign-up-button
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Sign Up Button"
								emptyText="Enter the text for the sign up button"
                                maxlength="{Long}25"
                                name="./signUpButton"/>
                            <createAccountLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Link to registration page"
                                    emptyText="Enter link to registration page"
                                    rootPath="/content/adc/"
                                    name="./createAccountLink"/>
                            <checkout-link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Checkout Link for New Customers"
								emptyText="Enter checkout link for new customer"
								rootPath="/content/adc/"
                                name="./checkoutLink"/>
                          </items>
                    </sign-up>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
