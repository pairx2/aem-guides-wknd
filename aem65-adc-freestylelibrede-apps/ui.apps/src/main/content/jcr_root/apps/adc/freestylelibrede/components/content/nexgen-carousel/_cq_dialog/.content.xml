<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    granite:class="coral-multifield"
    jcr:primaryType="nt:unstructured"
    jcr:title="NexGen Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[nextgen.carousel.clientlibs]"
    validation="coral-multifield">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <carousel
                        jcr:primaryType="nt:unstructured"
                        jcr:title="NexGen Carousel"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <cards
                                cq:showOnCreate="{Boolean}true"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Cards">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./cards">
                                    <items
                                        jcr:primaryType="nt:unstructured"
                                        name="./items">
                                        <cardHeading
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Card Title"
                                            name="./cardTitle"/>
                                        <cardImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Card Image"
                                            name="./cardImage"/>
                                        <htmltext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldDescription="Enter HTML text"
                                                fieldLabel="HTML Text"
                                                name="./htmlText"
                                                required="{Boolean}true"/>
                                        <ctaText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="CTA text "
                                            name="./cta/text"/>
                                        <ctaType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="CTA Type"
                                            name="./cta/type">
                                            <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="abbott-platform/datasource/generic-list"
                                                path="/apps/adc/freestylelibrede/authoring/datasources/cta-types"/>
                                        </ctaType>
                                        <ctaAction
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldDescription="CTA Action New Tab or Same Tab"
                                            fieldLabel="CTA Action"
                                            name="./cta/action">
                                            <items jcr:primaryType="nt:unstructured">
                                                <same-tab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Open link in Same Tab"
                                                    value="_self"/>
                                                <new-tab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Open link in New Tab"
                                                    value="_blank"/>
                                            </items>
                                        </ctaAction>
                                        <linkcontainer
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                showhidetargetvalue="link"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <link
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="CTA Link"
                                                    name="./cta/link"
                                                    rootPath="/content/adc/freestylelibrede"/>
                                            </items>
                                        </linkcontainer>
                                    </items>
                                </field>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    max-item="{Long}8"
                                    min-item="{Long}1"/>
                            </cards>
                        </items>
                    </carousel>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>