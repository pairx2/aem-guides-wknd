<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Probe and Order Info"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <componentType
                        granite:class="cq-dialog-dropdown-showhide"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="Select the type of component"
                        fieldLabel="Component Type"
                        name="./componentType">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            cq-dialog-dropdown-showhide-target=".componentType-showhide-target"/>
                        <items jcr:primaryType="nt:unstructured">
                            <select
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Select"
                                text="Select Component"
                                value="test"/>
                            <probeinfo
                                jcr:primaryType="nt:unstructured"
                                text="Probe Info"
                                value="probeinfo"/>
                            <orderinfo
                                jcr:primaryType="nt:unstructured"
                                text="Order Info"
                                value="orderinfo"/>
                        </items>
                    </componentType>
                    <productlist
                        granite:class="hide componentType-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Product List "
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        text="Product List ">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhidetargetvalue="probeinfo,orderinfo"/>
                        <items jcr:primaryType="nt:unstructured">
                            <productLists
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Add Product"
                                fieldLabel="Products">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./productLists">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}false"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <lookupService
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <fromLookupService
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Product"
                                                    fieldLabel="Product"
                                                    name="./lookupService">
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        cq-dialog-dropdown-showhide-target=".list-option-listfromlookup-showhide-target"/>
                                                    <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="amd/datasource/dropdown"
                                                        lookuptype="/quality/api/public/productcatalog/search"/>
                                                </fromLookupService>
                                            </items>
                                        </lookupService>
                                    </items>
                                </field>
                            </productLists>
                        </items>
                    </productlist>
                    <imageContainer
                        granite:class="hide componentType-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        sling:orderBefore="id"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhidetargetvalue="probeinfo"/>
                        <items jcr:primaryType="nt:unstructured">
                            <probeimagePath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select the image"
                                fieldLabel="Probe Image path"
                                name="./imagePath"
                                rootPath="/content/dam"/>
                        </items>
                    </imageContainer>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
