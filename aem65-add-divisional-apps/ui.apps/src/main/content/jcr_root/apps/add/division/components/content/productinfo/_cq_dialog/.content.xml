<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Product Info"
	sling:resourceType="cq/gui/components/authoring/dialog"
	extraClientlibs="cq.authoring.dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/container"
				maximized="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">
					<optionTypes
						granite:class="cq-dialog-dropdown-showhide"
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/select"
						fieldDescription="Set the type of the Test menu"
						fieldLabel="Select the type of Test" name="./source">
						<granite:data jcr:primaryType="nt:unstructured"
							cq-dialog-dropdown-showhide-target=".testType-showhide-target" />
						<items jcr:primaryType="nt:unstructured">
							<choose-test jcr:primaryType="nt:unstructured"
								jcr:title="Choose test" text="---Select---" />
							<condition-testmenu
								jcr:primaryType="nt:unstructured"
								jcr:title="Condition Test Menu" text="Condition Test menu"
								value="condition" />
							<product-testmenu
								jcr:primaryType="nt:unstructured" jcr:title="Product Test Menu"
								text="Product Test menu" value="product" />
							<tabular-testmenu
								jcr:primaryType="nt:unstructured" jcr:title="Tabular Test Menu"
								text="Tabular Test menu" value="tabular" />
						</items>
					</optionTypes>
					<condition-testmenu
						granite:class="hide testType-showhide-target"
						jcr:primaryType="nt:unstructured" jcr:title="Condition Test Menu"
						sling:resourceType="granite/ui/components/coral/foundation/container"
						text="Condition Test menu">
						<granite:data jcr:primaryType="nt:unstructured"
							showhidetargetvalue="condition" />
						<items jcr:primaryType="nt:unstructured">
							<selecttests jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/select"
								fieldLabel="Select Tests (Condition)" multiple="{Boolean}true"
								name="./conditionLookupService">
								<datasource jcr:primaryType="nt:unstructured"
									sling:resourceType="add/datasource/dropdown"
									lookuptype="/quality/api/public/products?type=condition" />
							</selecttests>
						</items>
					</condition-testmenu>
					<product-testmenu
						granite:class="hide testType-showhide-target"
						jcr:primaryType="nt:unstructured" jcr:title="Product Test Menu"
						sling:resourceType="granite/ui/components/coral/foundation/container"
						text="Product Test menu">
						<granite:data jcr:primaryType="nt:unstructured"
							showhidetargetvalue="product" />
						<items jcr:primaryType="nt:unstructured">
							<productname jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/select"
								fieldLabel="Select Tests (Product)"
								name="./productLookupService">
								<datasource jcr:primaryType="nt:unstructured"
									sling:resourceType="add/datasource/dropdown"
									lookuptype="/quality/api/public/products?type=product" />
							</productname>
						</items>
					</product-testmenu>
					<tabular-testmenu
						granite:class="hide testType-showhide-target"
						jcr:primaryType="nt:unstructured" jcr:title="Tabular Test Menu"
						sling:resourceType="granite/ui/components/coral/foundation/container"
						text="Tabular Test menu">
						<granite:data jcr:primaryType="nt:unstructured"
							showhidetargetvalue="tabular" />
						<items jcr:primaryType="nt:unstructured">
							<tabularname jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/select"
								fieldLabel="Select Tests (Tabular)" multiple="{Boolean}true"
								name="./tabularLookupService">
								<datasource jcr:primaryType="nt:unstructured"
									sling:resourceType="add/datasource/dropdown"
									lookuptype="/quality/api/public/products?type=tabular" />
							</tabularname>
						</items>
					</tabular-testmenu>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
