<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Chromosome Info Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <componentType
                        granite:class="cq-dialog-dropdown-showhide"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="Select the type of component"
                        fieldLabel="Component Type"
                        name="./componentType">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            cq-dialog-dropdown-showhide-target=".componentType-showhide-target"/>
                        <items jcr:primaryType="nt:unstructured">
                            <select
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Select"
                                text="Select Component"
                                value="select"/>
                            <probeinfo
                                jcr:primaryType="nt:unstructured"
                                text="Probe Info"
                                value="probeinfo"/>
                            <orderinfo
                                jcr:primaryType="nt:unstructured"
                                text="Order Info"
                                value="orderinfo"/>
                        </items>
                    </componentType>
                    <productlist
                        granite:class="hide componentType-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Product List "
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        text="Product List ">
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhidetargetvalue="probeinfo,orderinfo"/>
                        <items jcr:primaryType="nt:unstructured">
                            <probeorderID
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Probe ID"
                                fieldLabel="Probe ID"
                                name="./probeID"/>
                            <productID
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Product ID"
                                fieldLabel="Product ID"
                                name="./productID"/>
                        </items>
                    </productlist>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>