  "scripts": {
    "dev": "tsc -b -v ./src/packages && webpack --env dev --config ./webpack.dev.js && clientlib --verbose",
    "prod": "tsc -b -v ./src/packages && webpack --config ./webpack.prod.js && clientlib --verbose",
    "start": "webpack-dev-server --open --config ./webpack.dev.js",
    "sync": "aemsync -d -p ../ui.apps/src/main/content",
    "devsync": "tsc -b -v ./src/packages && webpack --env dev --config ./webpack.dev.js && clientlib --verbose && aemsync -d -p ../ui.apps/src/main/content",
    "watch": "webpack-dev-server --config ./webpack.dev.js --env writeToDisk & chokidar -c \"clientlib\" ./dist & aemsync -w ../ui.apps/src/main/content"
  },
