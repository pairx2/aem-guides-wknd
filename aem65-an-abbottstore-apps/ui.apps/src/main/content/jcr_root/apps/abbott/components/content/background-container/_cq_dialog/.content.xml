<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Background Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/content/documentation/abbott-documenation/background-container.html?wcmmode=disabled">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <options
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <id
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Configure container id"
                                        fieldLabel="Id"
                                        name="./id"/>
                                    <styletype
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select background style for the Background Container"
                                        fieldLabel="Style"
                                        name="./backgroundStyle">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <color
                                                jcr:primaryType="nt:unstructured"
                                                text="Color"
                                                value="color"/>
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                text="Image"
                                                value="image"/>
                                        </items>
                                    </styletype>
                                    <bg-color
                                        granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="color"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                granite:class="coral-Heading coral-Heading--4"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                level="{Long}4"
                                                text="Background Color"/>
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <color-picker
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                        autogenerateColors="off"
                                                        defaultValue="#FFFAF0"
                                                        emptyText="Select background color"
                                                        name="./bgColor"
                                                        showDefaultColors="{Boolean}false"
                                                        showProperties="{Boolean}false"
                                                        value="#FFFAF0">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <transparent
                                                                jcr:primaryType="nt:unstructured"
                                                                name="Transparent"
                                                                value="rgba(255, 255, 255, 0)"/>
                                                            <pink
                                                                jcr:primaryType="nt:unstructured"
                                                                name="pink"
                                                                value="#FFFAF0"/>
                                                            <white
                                                                jcr:primaryType="nt:unstructured"
                                                                name="White"
                                                                value="#FFFFFF"/>
                                                            <gold
                                                                jcr:primaryType="nt:unstructured"
                                                                name="Gold"
                                                                value="#BFA042"/>
                                                            <mocha
                                                                jcr:primaryType="nt:unstructured"
                                                                name="GreyMocha"
                                                                value="#AE9E98"/>
                                                            <shade-black
                                                                jcr:primaryType="nt:unstructured"
                                                                name="shade-black"
                                                                value="#231f20"/>
                                                        </items>
                                                    </color-picker>
                                                </items>
                                            </well>
                                        </items>
                                    </bg-color>
                                    <bg-image
                                        granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="image"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                granite:class="coral-Heading coral-Heading--4"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                level="{Long}4"
                                                text="Background Image"/>
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <path
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        name="./bgImage"
                                                        rootPath="/content/dam"/>
                                                </items>
                                            </well>
                                        </items>
                                    </bg-image>
                                    <is-container
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}false"
                                        fieldDescription="Check to make the section wrap into a container"
                                        name="./isContainer"
                                        text="Is Container ?"
                                        value="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </options>
                    <spacing
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/abbott/components/content/spacing/cq:dialog/content/items/tabs/items/spacing"/>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <column1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <helpTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                level="3"
                                                text="Background Container Component"/>
                                        </items>
                                    </column1>
                                    <column2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <helpText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/text"
                                                text="This Background Container component is used to provide background color or image to a component"/>
                                        </items>
                                    </column2>
                                </items>
                            </column>
                        </items>
                    </help>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
