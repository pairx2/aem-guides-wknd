<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/content/documentation/abbott-documenation/column-control.html?wcmmode=disabled">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <coltype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <class
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Add custom class"
                                        fieldLabel="Custom Class"
                                        name="./customClass"/>
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select Column widths and each column would get adjusted to the width chosen"
                                        fieldLabel="Column Widths"
                                        name="./numCols">
                                        <items jcr:primaryType="nt:unstructured">
                                            <select
                                                jcr:primaryType="nt:unstructured"
                                                text="Select Columns"/>
                                            <col1-100
                                                jcr:primaryType="nt:unstructured"
                                                text="col1-100"
                                                value="1"/>
                                            <col2-50-50
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-50-50"
                                                value="2"/>
                                            <col2-20-80
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-20-80"
                                                value="22080"/>
                                            <col2-25-75
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-25-75"
                                                value="22575"/>
											<col2-responsive-25-75
                                                jcr:primaryType="nt:unstructured"
                                                text="Responsive col2-25-75"
                                                value="R22575"/>
                                            <col2-75-25
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-75-25"
                                                value="27525"/>
                                            <col3-33-33-33
                                                jcr:primaryType="nt:unstructured"
                                                text="col3-33-33-33"
                                                value="3"/>
                                            <col3-25-50-25
                                                jcr:primaryType="nt:unstructured"
                                                text="col3-25-50-25"
                                                value="3255025"/>
                                            <col3-25-25-50
                                                jcr:primaryType="nt:unstructured"
                                                text="col3-25-25-50"
                                                value="3252550"/>
                                            <col3-50-25-25
                                                jcr:primaryType="nt:unstructured"
                                                text="col3-50-25-25"
                                                value="3502525"/>
                                            <col4-25-25-25-25
                                                jcr:primaryType="nt:unstructured"
                                                text="col4-25-25-25-25"
                                                value="4"/>
                                            <col5-20-20-20-20-20
                                                jcr:primaryType="nt:unstructured"
                                                text="col5-20-20-20-20-20"
                                                value="5"/>
                                            <col6-16-16-16-16-16-16
                                                jcr:primaryType="nt:unstructured"
                                                text="col6-16-16-16-16-16-16"
                                                value="6"/>
                                            <col7-14-14-14-14-14-14-14
                                                jcr:primaryType="nt:unstructured"
                                                text="col7-14-14-14-14-14-14-14"
                                                value="7"/>
                                            <col8-12-12-12-12-12-12-12-12
                                                jcr:primaryType="nt:unstructured"
                                                text="col8-12-12-12-12-12-12-12-12"
                                                value="8"/>
                                            <col9-11-11-11-11-11-11-11-11-11
                                                jcr:primaryType="nt:unstructured"
                                                text="col9-11-11-11-11-11-11-11-11-11"
                                                value="9"/>
                                            <col10-10-10-10-10-10-10-10-10-10-10
                                                jcr:primaryType="nt:unstructured"
                                                text="col10-10-10-10-10-10-10-10-10-10-10"
                                                value="10"/>
                                            <col11-9-9-9-9-9-9-9-9-9-9-9
                                                jcr:primaryType="nt:unstructured"
                                                text="col11-9-9-9-9-9-9-9-9-9-9-9"
                                                value="11"/>
                                            <col12-8-8-8-8-8-8-8-8-8-8-8-8
                                                jcr:primaryType="nt:unstructured"
                                                text="col12-8-8-8-8-8-8-8-8-8-8-8-8"
                                                value="12"/>
											<center-align
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
											checked="{Boolean}false"
											fieldDescription="Check to make the section wrap align vertical"
											name="./verticalAlign"
											text="Is vertical Align ?"/>
                                        </items>
                                    </columns>
									<center-align
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}false"
                                        fieldDescription="Check to make the section wrap align vertical"
                                        name="./verticalAlign"
                                        text="Is vertical Align ?"/>
                                    <no-gutters
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Check to add zero padding to column control"
                                        name="./noGutters"
                                        text="No Gutters"
                                        value="{Boolean}true"/>
                                </items>
                            </coltype>
                        </items>
                    </tab1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
