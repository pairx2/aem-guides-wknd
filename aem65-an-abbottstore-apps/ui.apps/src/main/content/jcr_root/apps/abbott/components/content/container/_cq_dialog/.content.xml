<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Abbott Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/content/documentation/abbott-documenation/abbott-container.html?wcmmode=disabled">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <id
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Configure container id"
                                        fieldLabel="Id"
                                        name="./id"/>
                                    <bgcolor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldDescription="Select background color"
                                        fieldLabel="Background Color"
                                        name="./bgColor"/>
                                </items>
                            </column>
                        </items>
                    </tab1>
                    <tab2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Styles"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <spacing-top
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Configure required spacing top"
                                        fieldLabel="Spacing Top"
                                        name="./spacingTop">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nopaddingtop
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="abbott-margin-top-0"/>
                                            <spacing-1rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-1"
                                                value="abbott-margin-top-1"/>
                                            <spacing-2rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-2"
                                                value="abbott-margin-top-2"/>
                                            <spacing-3rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-3"
                                                value="abbott-margin-top-3"/>
                                            <spacing-4rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-4"
                                                value="abbott-margin-top-4"/>
                                            <spacing-5rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-5"
                                                value="abbott-margin-top-5"/>
                                        </items>
                                    </spacing-top>
                                    <spacing-bottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Configure required spacing bottom"
                                        fieldLabel="Spacing Bottom"
                                        name="./spacingBottom">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nopaddingtop
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="abbott-margin-bottom-0"/>
                                            <spacing-1rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-1"
                                                value="abbott-margin-bottom-1"/>
                                            <spacing-2rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-2"
                                                value="abbott-margin-bottom-2"/>
                                            <spacing-3rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-3"
                                                value="abbott-margin-bottom-3"/>
                                            <spacing-4rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-4"
                                                value="abbott-margin-bottom-4"/>
                                            <spacing-5rem
                                                jcr:primaryType="nt:unstructured"
                                                text="spacing-5"
                                                value="abbott-margin-bottom-5"/>
                                        </items>
                                    </spacing-bottom>
                                </items>
                            </column>
                        </items>
                    </tab2>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
