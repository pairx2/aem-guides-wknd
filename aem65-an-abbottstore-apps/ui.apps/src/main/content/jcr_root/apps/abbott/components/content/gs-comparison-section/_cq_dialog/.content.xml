<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Glucerna Comparison Section"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/content/documentation/abbott-documenation/glucerna-comparion-section.html?wcmmode=disabled">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <bgColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldDescription="Configure background color"
                                                fieldLabel="Background Color"
                                                name="./bgColor"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Configure titile"
                                                fieldLabel="Title"
                                                name="./title"
												useFixedInlineToolbar="{Boolean}true">
												<rtePlugins
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
												<uiSettings
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
											</title>
                                            <titleColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldDescription="Configure titile color"
                                                fieldLabel="Title Color"
                                                name="./titleColor"/>
                                            <subText1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Configure subtext1"
                                                fieldLabel="SubText1"
                                                name="./subText1"
												useFixedInlineToolbar="{Boolean}true">
												<rtePlugins
														jcr:primaryType="nt:unstructured"
														sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
												<uiSettings
														jcr:primaryType="nt:unstructured"
														sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
											</subText1>
                                            <subText2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Configure subtext2"
                                                fieldLabel="SubText2"
                                                name="./subText2"/>
                                            <subText3
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Configure subtext3"
                                                fieldLabel="SubText3"
                                                name="./subText3"
												useFixedInlineToolbar="{Boolean}true">
												<rtePlugins
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
												<uiSettings
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
											</subText3>
                                            <comparisonItems
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Configure items"
                                                fieldLabel="Items">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./compareItems">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <image
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Confgure image"
                                                                    fieldLabel="Image"
                                                                    name="./image"
                                                                    rootPath="/content/dam"/>
																<altText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                                                    fieldLabel="Alt Text"
                                                                    name="./altText"/>
                                                            </items>
                                                        </well>
                                                    </items>
                                                </field>
                                            </comparisonItems>
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Configure text"
                                                fieldLabel="Text"
                                                name="./text"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
                                                <uiSettings
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
                                            </text>
                                            <annonymous-buttonLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Configure annonymous user button label"
                                                fieldLabel="Annonymous user Button Label"
                                                name="./annonymousButtonLabel"/>
                                            <loggedin-buttonLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Configure Logged in user button label"
                                                fieldLabel="Loggedin user Button Label"
                                                name="./loggedinButtonLabel"/>
                                            <buttonLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Configure link"
                                                fieldLabel="Button Link"
                                                name="./buttonLink"
                                                rootPath="/content"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
