<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Glucerna Promotional Information"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/content/documentation/abbott-documenation/glucerna-promotional-info.html?wcmmode=disabled">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <bgColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldDescription="Configure background color"
                                                fieldLabel="Background Color"
                                                name="./bgColor"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Configure titile"
                                                fieldLabel="Title"
                                                name="./title"
												useFixedInlineToolbar="{Boolean}true">
												<rtePlugins
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
												<uiSettings
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
											</title>
                                            <titleColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldDescription="Configure titile color"
                                                fieldLabel="Title Color"
                                                name="./titleColor"/>
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Configure text"
                                                fieldLabel="Text"
                                                name="./text"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
                                                <uiSettings
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
                                            </text>
                                            <promotionInfoItems
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Configure items"
                                                fieldLabel="Promotion Items">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./promotionInfoItems">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <title
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Configure titile"
                                                                    fieldLabel="Title"
                                                                    name="./promotionTitle"/>
                                                                <titleColor
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldDescription="Configure titile color"
                                                                    fieldLabel="Title Color"
                                                                    name="./promotionTitleColor"/>
                                                                <subTitle
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                    fieldDescription="Configure sub titile"
                                                                    fieldLabel="Sub Title"
                                                                    name="./promotionSubTitle"
																	useFixedInlineToolbar="{Boolean}true">
																	 <rtePlugins
																		jcr:primaryType="nt:unstructured"
																		sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
																	<uiSettings
																		jcr:primaryType="nt:unstructured"
																		sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
																</subTitle>
                                                                <subTitleColor
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldDescription="Configure subtitile color"
                                                                    fieldLabel="Subtitle Color"
                                                                    name="./promotionSubTitleColor"/>
                                                                <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                    fieldDescription="Configure text"
                                                                    fieldLabel="Text"
                                                                    name="./promotionText"
                                                                    useFixedInlineToolbar="{Boolean}true">
                                                                    <rtePlugins
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
                                                                    <uiSettings
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
                                                                </text>
                                                                <deskTopImage
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Confgure deskTop image"
                                                                    fieldLabel="Desktop Image"
                                                                    name="./deskTopImage"
                                                                    rootPath="/content/dam"/>
                                                                <mobileImage
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Confgure mobile image"
                                                                    fieldLabel="Mobile Image"
                                                                    name="./mobileImage"
                                                                    rootPath="/content/dam"/>
																<altText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                                                    fieldLabel="Alt Text"
                                                                    name="./altText"/>
                                                                <dislaimerText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                    fieldDescription="Configure disclaimer text"
                                                                    fieldLabel="Disclaimer Text"
                                                                    name="./disclaimerText"
                                                                    useFixedInlineToolbar="{Boolean}true">
                                                                    <rtePlugins
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceSuperType="/apps/abbott/components/plugins/rte/rtePlugins"/>
                                                                    <uiSettings
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceSuperType="/apps/abbott/components/plugins/rte/uiSettings"/>
                                                                </dislaimerText>
                                                            </items>
                                                        </well>
                                                    </items>
                                                </field>
                                            </promotionInfoItems>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
