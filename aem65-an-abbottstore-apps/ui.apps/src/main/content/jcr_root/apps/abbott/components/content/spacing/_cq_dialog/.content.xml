<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Spacing"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/content/documentation/v2/components/v1/spacing.html">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <spacing
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Spacing"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <spacing-options
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Choose an option to apply space between the components"
                                        fieldLabel="Spacing Options"
                                        name="./spacing">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".spacing-options-hide-show"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <default-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="Default Spacing"
                                                value="default-spacing"/>
                                            <custom-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="Custom Spacing"
                                                value="custom-spacing"/>
                                        </items>
                                    </spacing-options>
                                    <default-spacing
                                        granite:class="spacing-options-hide-show"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="default-spacing"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                granite:class="coral-Heading coral-Heading--4"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                level="{Long}4"
                                                text="Default Spacing Options"/>
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <spacing-options
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        name="./defaultSpacing">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <select-spacing
                                                                jcr:primaryType="nt:unstructured"
                                                                text="--- Select Required Spacing ---"
                                                                value=""/>
                                                            <Similac-promotional-info
                                                                jcr:primaryType="nt:unstructured"
                                                                text="similac-promotional-info"
                                                                value="similac-promotional-info"/>
                                                            <Similac-text-component
                                                                jcr:primaryType="nt:unstructured"
                                                                text="similac-text-component"
                                                                value="similac-text-component"/>
                                                        </items>
                                                    </spacing-options>
                                                </items>
                                            </well>
                                        </items>
                                    </default-spacing>
                                    <custom-spacing
                                        granite:class="spacing-options-hide-show"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="custom-spacing"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                granite:class="coral-Heading coral-Heading--4"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                level="{Long}4"
                                                text="Custom Spacing Options"/>
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <top-spacing
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Specify spacing value in rem to add space to the top(1 rem = 16px)"
                                                        fieldLabel="Top Spacing (rem)"
                                                        min="{Long}0"
                                                        name="./spacingTop"
                                                        step="0.1"/>
                                                    <bottom-spacing
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Specify spacing value in rem to add space to the bottom(1 rem = 16px)"
                                                        fieldLabel="Bottom Spacing (rem)"
                                                        min="{Long}0"
                                                        name="./spacingBottom"
                                                        step="0.1"/>
                                                    <left-spacing
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Specify spacing value in rem to add space to the left(1 rem = 16px)"
                                                        fieldLabel="Left Spacing (rem)"
                                                        min="{Long}0"
                                                        name="./spacingLeft"
                                                        step="0.1"/>
                                                    <right-spacing
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Specify spacing value in rem to add space to the right(1 rem = 16px)"
                                                        fieldLabel="Right Spacing (rem)"
                                                        min="{Long}0"
                                                        name="./spacingRight"
                                                        step="0.1"/>
                                                </items>
                                            </well>
                                        </items>
                                    </custom-spacing>
                                </items>
                            </column>
                        </items>
                    </spacing>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <column1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <helpTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                level="3"
                                                text="Divider Component"/>
                                        </items>
                                    </column1>
                                    <column2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <helpText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/text"
                                                text="Divider component is used to provide space/padding between two components"/>
                                        </items>
                                    </column2>
                                </items>
                            </column>
                        </items>
                    </help>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
