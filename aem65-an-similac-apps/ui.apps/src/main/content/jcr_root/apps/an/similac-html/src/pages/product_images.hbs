{{#> layout/base title="Productdetail" }}

{{#*inline "content-block"}}

{{> includes/drawer }}

{{> includes/bread-crumb }}

<div class="container">
	<div class="row">
		<div class="col-12 col-md-6 col-lg-6 m-left-s">
			{{> includes/image-slider-new }}
		</div>
		<div class="col-12 col-md-6 col-lg-6 col-xl-4 col-lg-4  m-right-s">
			{{> includes/product-info product_info = productDetail.productInfo}}
		</div>
	</div>
</div>

{{> includes/tabs }}


<section class="card-section">
	<div class="container">
		<p class="also-view-title">People Also Viewed</p>
		<div class="row">
			{{#each productDetail.cards.data}}
			<div class="{{@root.productDetail.cards.customClass}}"> 
				{{> includes/card-product product_name=this.productName img_lazy_src=this.imgLazySrc  img_src=this.imgSrc img_md_src=this.imgMdSrc img_sm_src=this.imgSmSrc alt_text=this.altText btn1=this.button1 btn2=this.button2 href=this.href quantity=this.quantity price=this.price old_price=this.oldPrice rating=this.rating}}
			</div>
			{{/each}}
		</div>
	</div>
</section>

{{/inline}}

{{#*inline "scripts-block"}}
{{!-- tab component js --}}
<script type="text/javascript"  src="similac-component/js/tab/polyfills.js"></script>
<script type="text/javascript" src="similac-component/js/tab/tab.js" defer></script>
<script type="text/javascript" src="similac-component/js/tab/tabs.js" defer></script>

{{!-- image slider component js --}}
<script type="text/javascript" src="similac-component/js/product-info/product-info.js" defer></script>

<script type="text/javascript" src="similac-component/js/card-product/card-product.js" defer></script>

<script type="text/javascript" src="similac-component/js/video-player/youtube-iframe-api.js" defer></script>
{{/inline}}

{{/layout/base}}