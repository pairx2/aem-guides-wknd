<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/content/documentation/abbott-documenation/column-control.html?wcmmode=disabled">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <coltype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select Column widths and each column would get adjusted to the width chosen"
                                        fieldLabel="Column Widths"
                                        name="./numCols">
                                        <items jcr:primaryType="nt:unstructured">
                                            <select
                                                jcr:primaryType="nt:unstructured"
                                                text="Select Columns"/>
                                            <col1-100
                                                jcr:primaryType="nt:unstructured"
                                                text="col1-100"
                                                value="1"/>
                                            <col2-25-75
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-25-75"
                                                value="22575"/>
                                            <col2-50-50
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-50-50"
                                                value="2"/>
                                            <col2-33-33
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-33-33"
                                                value="25050"/>
                                            <col2-30-70
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-30-70"
                                                value="23070"/>
                                            <col2-75-25
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-75-25"
                                                value="27525"/>
                                            <col3-33-33-33
                                                jcr:primaryType="nt:unstructured"
                                                text="col3-33-33-33"
                                                value="3"/>
                                            <col3-20-20-20
                                                jcr:primaryType="nt:unstructured"
                                                text="col3-20-20-20"
                                                value="3202020"/>
                                            <col3-25-25-25
                                                jcr:primaryType="nt:unstructured"
                                                text="col3-25-25-25"
                                                value="3252525"/>
                                            <col4-25-25-25-25
                                                jcr:primaryType="nt:unstructured"
                                                text="col4-25-25-25-25"
                                                value="4"/>
                                            <col3-33-33-33-250
                                                jcr:primaryType="nt:unstructured"
                                                text="col2-50-50-Tab"
                                                value="2colTab"/>
                                        </items>
                                    </columns>
                                    <label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Check to make the section wrap align vertical"
                                        fieldLabel="Section Title"
                                        name="./sectitle"/>
                                    <horizontalline
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Check this to hide the horizontal line"
                                        name="./hideLine"
                                        text="Hide Horizontal Line"
                                        value="{Boolean}true"/>
                                </items>
                            </coltype>
                        </items>
                    </tab1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>