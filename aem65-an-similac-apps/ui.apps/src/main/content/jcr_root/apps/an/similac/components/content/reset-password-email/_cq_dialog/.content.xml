<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured"
	jcr:title="Login"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content
		jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/tabs"
				maximized="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">
					<reset-password
						jcr:primaryType="nt:unstructured"
						jcr:title="Reset Password"
						sling:resourceType="granite/ui/components/coral/foundation/container"
						margin="{Boolean}true">
						<items jcr:primaryType="nt:unstructured">
							<columns
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
								margin="{Boolean}true">
								<items jcr:primaryType="nt:unstructured">
									<column
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/container">
										<items jcr:primaryType="nt:unstructured">
											<centerImagePath
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
												fieldDescription="Choose Center  Image Path"
												fieldLabel="Reset Password Center Image Path"
												name="./centerImagePath"
												rootPath="/content/dam/an"/>
											<salutation
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Enter the salutaion text (Hi,Dear,etc.)"
												fieldLabel="Salutation Text"
												name="./salutation"/>
											<userName
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Enter user name attribute to be mapped"
												fieldLabel="User Name Attribute"
												name="./userName"/>
											<bodyText
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Enter the body text"
												fieldLabel="Body Text"
												name="./body"/>
											<linkLabel
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Enter the link label"
												fieldLabel="Link Label"
												name="./linkLabel"/>
											<domainPath
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Enter Domain Path"
												fieldLabel="Domain Path"
												name="./domainPath"/>
											<resetPasswordLink
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Enter Reset Password Page Link"
												fieldLabel="Reset Password Page Link"
												name="./resetPasswordLink"/>
											<footerImagePath
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
												fieldDescription="Choose Footer Image Path"
												fieldLabel="Reset Password Footer Image Path"
												name="./footerImagePath"
												rootPath="/content/dam/an"/>
											<thanksNote
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Enter the thanks note text"
												fieldLabel="Thanks Note Text"
												name="./thanksNote"/>
										</items>
									</column>
								</items>
							</columns>
						</items>
					</reset-password>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
