<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article Detail (ARDX)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <content
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <articleInfoConf
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Article Details"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <primaryAuthorInfo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Primary Author Basic Info"
                                        name="./primaryAuthorBasicInfo"/>
                                    <articlePrimaryAuthorInfo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        defaultValue="./primaryAuthorBasicInfo"
                                        name="../../../../../articleAuthor@ValueFrom"
                                        value="./primaryAuthorBasicInfo"/>
                                    <primaryAuthorSubInfo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Primary Author Sub Info"
                                        name="./primaryAuthorSubInfo"/>
                                    <secondaryAuthorInfo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Secondary Author Basic Info"
                                        name="./secondaryAuthorBasicInfo"/>
                                    <articleSecondaryAuthorInfo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        defaultValue="./secondaryAuthorBasicInfo"
                                        name="../../../../../articleSecondaryAuthor@ValueFrom"
                                        value="./secondaryAuthorBasicInfo"/>
                                    <secondaryAuthorSubInfo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Secondary Author Sub Info"
                                        name="./secondaryAuthorSubInfo"/>
                                    <publishtext
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Publish Text"
                                        name="./publishText"/>										
                                    <publishDateTypeHint
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        name="./publishDate@TypeHint"
                                        value="Date"/>
                                    <publishDate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="MM/DD/YYYY"
                                        fieldLabel="Publish Date (MM/DD/YYYY)"
                                        name="./publishDate"
                                        required="{Boolean}true"
                                        valueFormat="YYYY-MM-DD[T]HH:mm:ss.SSSZ"/>
                                    <articlePublishDate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        defaultValue="./publishDate"
                                        name="../../../../../authoredDate@ValueFrom"
                                        value="./publishDate"/>
                                    <articlePublishDateTypeHint
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        name="../../../../../authoredDate@TypeHint"
                                        value="Date"/>										
                                </items>
                            </columns>
                        </items>
                    </articleInfoConf>
                </items>
            </content>
        </items>
    </content>
</jcr:root>
