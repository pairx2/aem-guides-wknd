<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Cards"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <wistiaVideo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Wistia video"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <videoid
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Please enter the video id of the video that will display in this component."
                                                fieldLabel="Video ID"
                                                name="./videoID"/>
                                            <videoDocumentNumber
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Please enter the video document number that will author appropriate value from approval/review systems."
                                                fieldLabel="Video Document Number"
                                                name="./videoDocumentNumber"/>
                                            <imagePath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="This is the path to the image in the repository."
                                                fieldLabel="Path to the thumbnail image in the DAM."
                                                name="./imagePath"
                                                rootPath="/content/dam/ardx"/>
                                            <bgColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                defaultValue="FFFFFF"
                                                editable="{Boolean}false"
                                                fieldLabel="Background Color"
                                                name="./backgroundColor"
                                                showDefaultColors="{Boolean}false">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/libs/core/wcm/components/container/v1/container/cq:design_dialog/content/items/tabs/items/containerSettings/items/container/items/backgroundColorAllowedSwatches"/>
                                            </bgColor>
                                            <popup
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Select if Pop-up window should occur for playing video"
                                                name="./popup"
                                                text="Popover Video"
                                                uncheckedValue="false"
                                                value="true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </wistiaVideo>
                    <link jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <clickable jcr:primaryType="nt:unstructured">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <columns jcr:primaryType="nt:unstructured">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column jcr:primaryType="nt:unstructured">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <container jcr:primaryType="nt:unstructured">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <well jcr:primaryType="nt:unstructured">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <linkset jcr:primaryType="nt:unstructured">
                                                                                        <items jcr:primaryType="nt:unstructured">
                                                                                            <link
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                                                                fieldDescription="Enter link to a content page, external URL or page anchor"
                                                                                                fieldLabel="Destination/URL"
                                                                                                name="./cardLink"/>
                                                                                        </items>
                                                                                    </linkset>
                                                                                </items>
                                                                            </well>
                                                                        </items>
                                                                    </container>
                                                                </items>
                                                            </column>
                                                        </items>
                                                    </columns>
                                                </items>
                                            </clickable>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </link>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
