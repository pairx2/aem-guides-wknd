<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                granite:class="hidden"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <hideSignUpInNav
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Specify if Sign Up section needs to be hidden"
                        fieldLabel="Hide Sign Up in Header Navigation"
                        name="./hideSignUpInNav"
                        text="Hide Sign Up in Header Navigation"
                        value="{Boolean}true"/>
                    <hideSearchInNav
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Specify if Search needs to be hidden"
                        fieldLabel="Hide Search in Header Navigation"
                        name="./hideSearchInNav"
                        text="Hide Search in Header Navigation"
                        value="{Boolean}true"/>
                    <hideMegaMenuInNav
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Specify if Mega menu needs to be hidden"
                        fieldLabel="Hide Mega menu in Header Navigation"
                        name="./hideMegaMenuInNav"
                        text="Hide Mega menu in Header Navigation"
                        value="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
