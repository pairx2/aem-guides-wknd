<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Horizontal Rule (ARDX-Division)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <ruleStyles
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <ruleColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldDescription="Please choose Rule Color"
                                                fieldLabel="Horizontal Rule Color"
                                                name="./ruleColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="ardx/division/components/content/text/eaem-touchui-dialog-rte-color-picker/color-picker-popover/cq:dialog/content/items/column/items/picker/items"/>
                                            </ruleColor>
                                            <ruleThickness
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldDescription="thickness of the horizontal rule in px"
                                                fieldLabel="Rule thickness"
                                                min="0"
                                                name="./ruleThickness"/>
                                            <checkbox
                                                granite:class="cq-dialog-checkbox-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                name="./marginCheckBox"
                                                text="Is Rule Top/Bottom Margin different ?"
                                                uncheckedValue="false"
                                                value="true">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-checkbox-showhide-target=".togglefield"/>
                                            </checkbox>
                                            <showcontainer
                                                granite:class="hide togglefield"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <topmargin
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Top margin of the  horizontal rule in px"
                                                        fieldLabel="Rule Top Margin"
                                                        min="0"
                                                        name="./ruleTopMargin"/>
                                                    <bottommargin
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Bottom margin of the horizontal rule in px"
                                                        fieldLabel="Rule bottom Margin"
                                                        min="0"
                                                        name="./ruleBottomMargin"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="true"/>
                                            </showcontainer>
                                            <hidecontainer
                                                granite:class="togglefield"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <topandbottommargin
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Top and Bottom margin of the horizontal rule in px"
                                                        fieldLabel="Rule Top &amp; Bottom Margin"
                                                        min="0"
                                                        name="./ruleTopAndBottomMargin"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="\0"/>
                                            </hidecontainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </ruleStyles>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
