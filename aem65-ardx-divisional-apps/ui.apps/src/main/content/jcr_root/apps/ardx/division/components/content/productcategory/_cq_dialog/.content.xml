<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Category"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <categorytiles
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Category Tiles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <showmorecountdesktop
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="For Show more count for desktop"
                                                fieldLabel="Show More Count for Desktop"
                                                name="./showMoreDesktop"/>
                                            <showmorecounttablet
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="For Show More count for Tablet"
                                                fieldLabel="Show More Count for Tablet"
                                                name="./showMoreTablet"/>
                                            <showmorecountmobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="For Show More count for Mobile"
                                                fieldLabel="Show More Count for Mobile"
                                                name="./showMoreMobile"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </categorytiles>
                    <subcategorytiles
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Sub-Category Tiles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <showmorecountdesktop
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="For count of max sub-categories shown in desktop"
                                                fieldLabel="Show More Count for Desktop"
                                                name="./showMoreDesktopSubCategory"/>
                                            <showmorecounttablet
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="For count of max sub-cats shown in tablet"
                                                fieldLabel="Show More Count for Tablet"
                                                name="./showMoreTabletSubCategory"/>
                                            <showmorecountmobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="For count of max sub-cats shown in mobile"
                                                fieldLabel="Show More Count for Mobile"
                                                name="./showMoreMobileSubCategory"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </subcategorytiles>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
