<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tiles With Background Image (ARDX-Division)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <asset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tabletImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Image to be displayed on Tablet devices"
                                                fieldLabel="Tablet image"
                                                fileNameParameter="./fileName1"
                                                fileReferenceParameter="./tabletImage"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file2"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <mobileImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Image to be displayed on Mobile devices"
                                                fieldLabel="Mobile image"
                                                fileNameParameter="./fileName2"
                                                fileReferenceParameter="./mobileImage"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file3"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <sectionTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Please specify if section title is required"
                                                name="./sectionTitleRequired"
                                                text="Is Section Title Required?"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </asset>
                    <ardxColortheme
                        jcr:primaryType="nt:unstructured"
                        jcr:title="ARDX Color Themes"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <headingTheme
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Color themes For Panel."
                                                fieldLabel="Color Themes "
                                                name="./headingTheme"
                                                required="{Boolean}true">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="ardx/division/components/color-options/items"/>
                                            </headingTheme>
                                            <textTheme
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Color theme for Text"
                                                fieldLabel="Color theme for Text "
                                                name="./textTheme"
                                                required="{Boolean}true">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="ardx/division/components/color-options/items"/>
                                            </textTheme>
                                            <panelhovercolor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select"
                                                fieldDescription="Colour themes for hover state"
                                                fieldLabel="Panel Hover Color"
                                                name="./panelHoverColor">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="ardx/division/components/color-options/items"/>
                                            </panelhovercolor>
                                            <texthovercolor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select"
                                                fieldDescription="Colour themes for Text in hover state"
                                                fieldLabel="Text Hover Color"
                                                name="./textHoverColor">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="ardx/division/components/color-options/items"/>
                                            </texthovercolor>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </ardxColortheme>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
