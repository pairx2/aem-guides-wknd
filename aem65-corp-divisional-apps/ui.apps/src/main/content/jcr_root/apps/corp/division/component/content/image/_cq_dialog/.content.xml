<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image-Global Marketing (CORP)"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.image.v2.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_image_v2"
    trackingFeature="core-components:image:v2">
    <content
        granite:class="cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <addons
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Additional data"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <textoverimg
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldLabel="Text over Image"
                                                name="./textOverImage"
                                                removeSingleParagraphContainer="{Boolean}true"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="abbott-platform/components/core/text/v1/text/rtePlugins"/>
                                                <uiSettings
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="abbott-platform/components/core/text/v1/text/uiSettings"/>
                                                <htmlRules
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="abbott-platform/components/core/text/v1/text/htmlRules"/>
                                            </textoverimg>
                                            <textpos
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select an option"
                                                fieldDescription="Select to position the text over image"
                                                fieldLabel="Text Position"
                                                name="./textPosition">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <top
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Top"
                                                        value="image-text--top"/>
                                                    <middle
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Middle"
                                                        value="image-text--middle"/>
                                                    <bottom
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bottom"
                                                        value="image-title"/>
                                                </items>
                                            </textpos>
                                            <textcolor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select an option"
                                                fieldDescription="Select the required color"
                                                fieldLabel="Text Color"
                                                name="./textColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <yellow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yellow"
                                                        value="text-color--yellow"/>
                                                    <darkyellow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Yellow"
                                                        value="text-color--dark-yellow"/>
                                                    <green
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Green"
                                                        value="text-color--green"/>
                                                    <darkgreen
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Green"
                                                        value="text-color--dark-green"/>
                                                    <fuscia
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fuscia"
                                                        value="text-color--fuscia"/>
                                                    <darkfuscia
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Fuscia"
                                                        value="text-color--dark-fuscia"/>
                                                    <orange
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Orange"
                                                        value="text-color--orange"/>
                                                    <darkorange
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Orange"
                                                        value="text-color--dark-orange"/>
                                                    <cyan
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Cyan"
                                                        value="text-color--cyan"/>
                                                    <blue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Blue"
                                                        value="text-color--blue"/>
                                                    <darkgray
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Gray"
                                                        value="text-color--dark-gray"/>
                                                    <gray
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gray"
                                                        value="text-color--gray"/>
                                                    <white
                                                        jcr:primaryType="nt:unstructured"
                                                        text="White"
                                                        value="text-color--white"/>
                                                    <lightgray
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light Gray"
                                                        value="text-color--light-gray"/>
                                                    <pblue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Primary Blue"
                                                        value="text-color--primary-blue"/>
                                                    <dblue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Blue"
                                                        value="text-color--dark-blue"/>
                                                    <mint
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Mint"
                                                        value="text-color--mint"/>
                                                </items>
                                            </textcolor>
                                            <border
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select an option"
                                                fieldDescription="Select to get border background for text over image only"
                                                fieldLabel="Background Border(for text over image)"
                                                name="./backBorder">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <yes
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yes"
                                                        value="yes"/>
                                                    <no
                                                        jcr:primaryType="nt:unstructured"
                                                        text="No"
                                                        value="no"/>
                                                </items>
                                            </border>
                                            <zoomoverlay
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select an option"
                                                fieldDescription="Select to get zoom overlay effect for text over image only"
                                                fieldLabel="Zoom Overlay Effect(for text over image)"
                                                name="./zoomOverlay">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <yes
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yes"
                                                        value="yes"/>
                                                    <no
                                                        jcr:primaryType="nt:unstructured"
                                                        text="No"
                                                        value="no"/>
                                                </items>
                                            </zoomoverlay>
                                            <hovertext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Hover text"
                                                name="./hoverText"/>
                                            <hovertextcolor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    emptyText="Select an option"
                                                    fieldDescription="Select the required color"
                                                    fieldLabel="Hover Heading Color for Panel Rotation"
                                                    name="./hoverTextColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <yellow
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Yellow"
                                                            value="image-text--hover-heading-yellow"/>
                                                    <green
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Green"
                                                            value="image-text--hover-heading-green"/>
                                                    <magenta
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Magenta"
                                                            value="image-text--hover-heading-magenta"/>
                                                    <orange
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Orange"
                                                            value="image-text--hover-heading-orange"/>
                                                    <cyan
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Cyan"
                                                            value="image-text--hover-heading-cyan"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue"
                                                            value="image-text--hover-heading-blue"/>
                                                    <gray
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Gray"
                                                            value="image-text--hover-heading-gray"/>
                                                    <red
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Red"
                                                            value="image-text--hover-heading-red"/>
                                                    <pblue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Primary Blue"
                                                            value="image-text--hover-heading-primary-blue"/>
                                                    <silver
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Silver"
                                                            value="image-text--hover-heading-silver"/>
                                                    <mint
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Mint"
                                                            value="image-text--hover-heading-mint"/>
                                                    <purple
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Purple"
                                                            value="image-text--hover-heading-purple"/>
                                                </items>
                                            </hovertextcolor>
                                            <imageOverlay
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    emptyText="Select an option"
                                                    fieldDescription="Select to get Image overlay effect"
                                                    fieldLabel="Image Overlay Effect"
                                                    name="./imageOverlay">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <yes
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Yes"
                                                            value="yes"/>
                                                    <no
                                                            jcr:primaryType="nt:unstructured"
                                                            text="No"
                                                            value="no"/>
                                                </items>
                                            </imageOverlay>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </addons>
                    <mobileImage
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Mobile Image"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <mobileimage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Mobile Image"
                                                    fileNameParameter="./fileName3"
                                                    fileReferenceParameter="./mobileImage"
                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                    multiple="{Boolean}false"
                                                    name="./mobileimage"
                                                    title="Upload Image Asset"
                                                    uploadUrl="${suffix.path}"
                                                    useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </mobileImage>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
