<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Related Article"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <article-details
                                                granite:class="cq-dialog-checkbox-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}true"
                                                fieldDescription="enable the checkbox to manually author Article Details"
                                                name="./enableManualArticleMethod"
                                                text="Need Article Details Manually"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-checkbox-showhide-target=".show-hide-checkbox"/>
                                            </article-details>
                                            <articlelabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Please fill  Label for Related Articles"
                                                fieldLabel="Label for Related Articles"
                                                name="./relatedLabel"/>
                                            <showManualArticleDetails
                                                granite:class="hide show-hide-checkbox"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <articletype
                                                        granite:class="cq-dialog-dropdown-showhide"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Article or Video"
                                                        fieldLabel="Article/Video"
                                                        name="./articleType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="None"
                                                                value="none"/>
                                                            <option2
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Limelight"
                                                                value="limeLight"/>
                                                            <option3
                                                                jcr:primaryType="nt:unstructured"
                                                                text="DAM Video"
                                                                value="dam"/>
                                                            <option4
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Video Link"
                                                                value="videoURL"/>
                                                            <option5
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Article"
                                                                value="article"/>
                                                            <option6
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Brightcove"
                                                                value="brightCove"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".articletype-showhide-target"/>
                                                    </articletype>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="true"/>
                                            </showManualArticleDetails>
                                            <articlepath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Please provide path of article"
                                                fieldLabel="Path"
                                                name="./articlePath"
                                                rootPath="/content/corp"/>
                                            <openinanewtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="This enables to open page in new tab"
                                                name="./openInNewTab"
                                                text="Open In New Tab"
                                                uncheckedValue="_self"
                                                value="_blank"/>
                                            <article-option
                                                granite:class="hide articletype-showhide-target show-hide-checkbox"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="article"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <articledescription
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Please fill Description"
                                                                fieldLabel="Description"
                                                                name="./articleDescription"/>
                                                            <articleimagepath
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Please provide path of image"
                                                                fieldLabel="Select image path to display"
                                                                name="./articleImagePath"
                                                                rootPath="/content/dam/corp"/>
                                                            <imagealttext
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Enter Image Alt Text"
                                                                fieldLabel="Enter Image Alt Text"
                                                                name="./altText"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </article-option>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
