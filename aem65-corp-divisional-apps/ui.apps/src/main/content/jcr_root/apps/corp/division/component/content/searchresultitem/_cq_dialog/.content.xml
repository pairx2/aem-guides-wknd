<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search Result Item"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Results"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <designType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select Design Layout"
                                                fieldDescription="Please select a design layout to format the results."
                                                fieldLabel="Design Layout"
                                                name="./designType"
                                                required="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <listView
                                                        jcr:primaryType="nt:unstructured"
                                                        text="List View"
                                                        value="listView"/>
                                                    <cardView
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Card View"
                                                        value="cardView"/>
                                                    <corpnewsroom
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Corp News Room"
                                                        value="corpnewsroom"/>
                                                    <category
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Category"
                                                        value="category"/>
                                                    <experts
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Experts"
                                                        value="experts"/>
                                                    <executive
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Executive"
                                                        value="executive"/>
                                                </items>
                                            </designType>
                                            <articleDate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="\{articledate}"
                                                fieldDescription="Please enter the Article Date"
                                                fieldLabel="Article Date"
                                                name="./articleDate"/>
                                            <categoryTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="\{categoryTitle}"
                                                fieldLabel="Category Title"
                                                name="./categoryTitle"/>
                                            <headingColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="\{headingColor}"
                                                fieldLabel="Category Title  Color"
                                                name="./headingColor"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tab1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
