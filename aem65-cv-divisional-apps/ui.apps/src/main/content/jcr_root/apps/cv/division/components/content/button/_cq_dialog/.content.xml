<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Button"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[button.clientlibs]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <button
                                                granite:class="cq-dialog-dropdown-showhide-multi"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Button Type"
                                                name="./buttonType"
                                                required="{Boolean}true"
                                                value="nobutton">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <noButton
                                                        jcr:primaryType="nt:unstructured"
                                                        text="No Button"
                                                        value="nobutton"/>
                                                    <url
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Go to URL"
                                                        value="url"/>
                                                    <anchor
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Go to Anchor"
                                                        value="anchor"/>
                                                    <video
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Play Limelight Video"
                                                        value="video"/>
                                                    <brightcove
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Play Brightcove Video"
                                                        value="brightCove"/>
                                                    <ytVideo
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Play YouTube Video"
                                                        value="ytvideo"/>
                                                    <clickToCall
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Click to Call"
                                                        value="clicktocall"/>
                                                    <asset
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Download Asset"
                                                        value="asset"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".showhidetargetmulti"/>
                                            </button>
                                            <buttonText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="The text to display on the button."
                                                fieldLabel="Button Text"
                                                name="./buttonText"/>
                                            <buttonColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Button Color Theme"
                                                name="./buttonColor"
                                                value="btn-style-default">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <primaryTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Primary Theme"
                                                        value="primary"/>
                                                    <CampaignTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Campaign Theme"
                                                        value="campaign"/>
                                                    <DarkblueTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Blue Theme"
                                                        value="dark-blue"/>
                                                    <LightBlueTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light Blue Theme"
                                                        value="light-blue"/>
                                                    <MediumblueTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Medium Blue Theme"
                                                        value="medium-blue"/>
                                                    <Gold_x0020_Theme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gold Theme"
                                                        value="gold"/>
                                                    <Light_x0020_GreenTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light Green Theme"
                                                        value="light-green"/>
                                                    <MagentaTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Magenta Theme"
                                                        value="magenta"/>
                                                    <OrangeTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Orange Theme"
                                                        value="orange"/>
                                                    <PurpleTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Purple Theme"
                                                        value="purple"/>
                                                    <RedTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Red Theme"
                                                        value="red"/>
                                                    <YellowTheme
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yellow  Theme"
                                                        value="yellow"/>
                                                </items>
                                            </buttonColor>
                                            <targetAction
                                                granite:class="showhidetargetmulti"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <path
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="For internal links, use selection dialog to locate Target URL page. For external links, enter full URL, starting with HTTPS "
                                                        fieldLabel="Target URL"
                                                        name="./urlLink"
                                                        rootPath="/content"/>
                                                    <checkbox
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        name="./targetNewWindow"
                                                        text="Open Target URL in New Window?"
                                                        value="true"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetmultiValue="url"/>
                                            </targetAction>
                                            <anchorName
                                                granite:class="showhidetargetmulti"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <anchorName
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Anchor Name"
                                                        name="./anchorName"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetmultiValue="anchor"/>
                                            </anchorName>
                                            <asset
                                                granite:class="showhidetargetmulti"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <path
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                        fieldDescription="Link to a content page, external URL or page anchor."
                                                        fieldLabel="Asset"
                                                        name="./assetLink"
                                                        rootPath="/content/dam"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetmultiValue="asset"/>
                                            </asset>
                                            <videoplayid
                                                granite:class="showhidetargetmulti"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <videoid
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Limelight Video Player ID "
                                                        fieldLabel="Limelight Video Player ID"
                                                        name="./playerId"/>
                                                    <mediaid
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Limelight Media ID"
                                                        fieldLabel="Limelight Media ID"
                                                        name="./mediaId"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetmultiValue="video"/>
                                            </videoplayid>
                                            <brightcove
                                                    granite:class="showhidetargetmulti"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <account-id
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Please enter account&#xa;ID of Brightcove&#xa;account"
                                                        fieldLabel="Account ID"
                                                        name="./accountID"/>
                                                    <video-id
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Please enter video ID&#xa;of Brightcove video"
                                                        fieldLabel="Video ID"
                                                        name="./brightVideoID"/>
                                                    <player-id
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Please enter player&#xa;ID of Brightcove&#xa;account"
                                                        fieldLabel="Player ID"
                                                        name="./brightPlayerID"/>
                                                </items>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetmultiValue="brightCove"/>
                                            </brightcove>
                                            <ytvideoplay
                                                granite:class="showhidetargetmulti"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <videoId
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter video id for the video to be played using YouTube"
                                                        fieldLabel="YouTube Video ID"
                                                        name="./videoId"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetmultiValue="ytvideo"/>
                                            </ytvideoplay>
                                            <clickcal
                                                granite:class="showhidetargetmulti"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <phoneNumber
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter telephone number, using numbers only (no special characters)"
                                                        fieldLabel="Telephone Number"
                                                        name="./phoneNumber"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetmultiValue="clicktocall"/>
                                            </clickcal>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
