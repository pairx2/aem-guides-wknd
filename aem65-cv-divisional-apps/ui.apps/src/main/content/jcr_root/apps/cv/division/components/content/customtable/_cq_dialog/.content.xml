<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Custom Table"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="tabselection"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tableoptions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Table Options"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <downloadDataSource
                                        granite:class="hide show-hide-download-checkbox"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <downloadDataSource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Please select Download Data Source"
                                                fieldLabel="Download Data Source"
                                                id="downloadDataSource"
                                                name="./downloadDataSource">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="abbott-platform/datasource/dropdown"
                                                    lookuptype="/api/public/lookup/referencedata?referenceType=poilist"/>
                                            </downloadDataSource>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="true"/>
                                    </downloadDataSource>
                                </items>
                            </column>
                        </items>
                    </tableoptions>
                    <tableColumns
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Table Columns"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tableContainer
                                        granite:class="hide type-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:orderBefore="id"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="eslDataSource"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <tableDataSource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Please select Table Data Source"
                                                fieldLabel="Table Data Source"
                                                id="tableDataSource"
                                                name="./tableDataSource">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="abbott-platform/datasource/dropdown"
                                                    lookuptype="/api/public/lookup/referencedata?referenceType=poilist"/>
                                            </tableDataSource>
                                        </items>
                                    </tableContainer>
                                </items>
                            </column>
                        </items>
                    </tableColumns>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
