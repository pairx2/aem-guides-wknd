<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Horizontal Rule (CV)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Details"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <ruleColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Rule Colors"
                                        name="./ruleColor">
                                        <items jcr:primaryType="nt:unstructured">
                                           <darkBlue
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Dark Blue"
                                                value="darkBlue"/>
                                            <lightBlue
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Light Blue"
                                                value="lightblue"/>
                                            <mediumBlue
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Medium Blue"
                                                value="mediumBlue"/>
                                            <primaryBlue
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Primary Blue"
                                                value="primaryBlue"/>
                                            <charcoal
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Charcoal"
                                                selected="{Boolean}true"
                                                value="charcoal"/>
                                            <gold
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Gold"
                                                value="gold"/>
                                            <lightGreen
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Light Green"
                                                value="lightGreen"/>
                                            <mediumGreen
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Medium Green"
                                                value="mediumGreen"/>
                                            <darkGray
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Dark Gray"
                                                value="darkGray"/>
                                            <mediumGray
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Medium Gray"
                                                value="mediumGray"/>
                                            <lightGray
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Light Gray"
                                                value="lightGray"/>
                                            <magenta
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Magenta"
                                                value="magenta"/>
                                            <mint
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Mint"
                                                value="abbott-mint"/>
                                            <orange
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Orange"
                                                value="orange"/>
                                            <purple
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Purple"
                                                value="purple"/>
                                            <red
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Red"
                                                value="red"/>
                                            <yellow
                                                jcr:primaryType="nt:unstructured"
                                                text="Abbott Yellow"
                                                value="yellow"/>                                            
                                            <black
                                                jcr:primaryType="nt:unstructured"
                                                text="Black"
                                                value="black"/>
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="White"
                                                value="white"/>
                                        </items>
                                    </ruleColor>
                                    <topMargin
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="specify values for Small, Medium, and Large"
                                        fieldLabel="Top Margin"
                                        name="./topMargin">
                                        <items jcr:primaryType="nt:unstructured">
                                            <small
												jcr:primaryType="nt:unstructured"
												text="Small"
												value="margin-top-small"/>
                                            <medium
												jcr:primaryType="nt:unstructured"
												text="Medium"
												value="margin-top-medium"/>
                                            <large
												jcr:primaryType="nt:unstructured"
												text="Large"
                                                selected="{Boolean}true"
												value="margin-top-large"/>
                                            <none
												jcr:primaryType="nt:unstructured"
												text="None"
												value="margin-top-none"/>
                                        </items>
                                    </topMargin>
                                    <bottomMargin
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="specify values for Small, Medium, and Large"
                                        fieldLabel="Bottom Margin"
                                        name="./bottomMargin">
                                        <items jcr:primaryType="nt:unstructured">
                                            <small
												jcr:primaryType="nt:unstructured"
												text="Small"
												value="margin-bottom-small"/>
                                            <medium
												jcr:primaryType="nt:unstructured"
												text="Medium"
												value="margin-bottom-medium"/>
                                            <large
												jcr:primaryType="nt:unstructured"
												text="Large"
                                                selected="{Boolean}true"
												value="margin-bottom-large"/>
                                            <none
												jcr:primaryType="nt:unstructured"
												text="None"
												value="margin-bottom-none"/>
                                        </items>
                                    </bottomMargin>
                                </items>
                            </column>
                        </items>
                    </tab1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
