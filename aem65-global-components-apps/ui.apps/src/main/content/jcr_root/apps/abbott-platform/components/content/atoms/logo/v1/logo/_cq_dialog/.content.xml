<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Logo Image"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[properties]">
                    <asset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:orderBefore="accessibility"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Select and upload a logo image to be added"
                                                fieldLabel="Logo Image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <logoAltText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                                                allowBlank="{Boolean}false"
                                                fieldDescription="Provide an Alternate Text for logo. Required for accessibility and SEO."
                                                fieldLabel="Logo Alt Text"
                                                name="./logoAltText"/>
                                            <link
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Select the destination url for the logo when clicked"
                                                fieldLabel="Logo Destination/URL"
                                                name="./link"
                                                rootPath="/content"/>
                                            <action
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select a preferred way to open the destination url"
                                                fieldLabel="Action"
                                                name="./action">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <option1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open link in new tab"
                                                        value="_blank"/>
                                                    <option2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open link in same tab"
                                                        value="_self"/>
                                                    <option3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open link in Parent Frame"
                                                        value="_parent"/>
                                                    <option4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open link in full window body"
                                                        value="_top"/>
                                                </items>
                                            </action>
                                            <external
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./external"
                                                fieldDescription="Check if the link entered is redirecting to a page outside of this site"
                                                text="This is an external link"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <stickyLogoImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Select a logo image to be used on the sticky header. (Applies only when sticky header is enabled)"
                                                fieldLabel="Sticky Logo Image"
                                                id="#myInput"
                                                name="./stickyLogoImage"
                                                rootPath="/content/dam"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </asset>
                    <metadata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Metadata"
                        sling:hideResource="true"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
