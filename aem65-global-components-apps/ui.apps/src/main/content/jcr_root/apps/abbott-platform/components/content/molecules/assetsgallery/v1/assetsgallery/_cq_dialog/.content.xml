<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Assets Gallery Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs"
        maximized="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
            <tab
                jcr:primaryType="nt:unstructured"
                jcr:title="Config"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <productImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="various product images"
                                fieldLabel="Product Images"
                                required="{Boolean}true">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./productImageList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <assetType
                                                    granite:class="cq-dialog-dropdown-showhide-multifield"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Asset Type"
                                                    name="./assetType">
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        cq-dialog-dropdown-showhide-target=".asset-type-showhide-target"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <option2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Image"
                                                            value="image"/>
                                                        <option1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Wistia Video"
                                                            value="wistiaVideo"/>
                                                    </items>
                                                </assetType>
                                                <wistiaID
                                                    granite:class="asset-type-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="wistiaVideo"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <wistiaID
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="ID for Wistia Video"
                                                                    fieldLabel="Wistia Video ID"
                                                                    maxLength="{Long}35"
                                                                    name="./wistiaID"
                                                                    required="{Boolean}false"/>
                                                                <videoDocumnetNumber
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please enter video document number"
                                                                    fieldLabel="Video Document Number"
                                                                    name="./videoDocumentNumber"/>
                                                            </items>
                                                        </well>
                                                    </items>
                                                </wistiaID>
                                                <largeImage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Image Path"
                                                    name="./largeImage"
                                                    required="{Boolean}true"
                                                    rootPath="/content/dam"/>
                                                <smallImage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Thumbnail image"
                                                    name="./smallImage"
                                                    rootPath="/content/dam"/>
                                                <altText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Image Alt text"
                                                    maxLength="{Long}35"
                                                    name="./altText"
                                                    required="{Boolean}true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </productImage>
                            <thumbnailPosition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Thumbnail Position"
                                name="./thumbnailPosition">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                        jcr:primaryType="nt:unstructured"
                                        text="Bottom"
                                        value="bottom"/>
                                    <option2
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="right"/>
                                    <option3
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="left"/>
                                </items>
                            </thumbnailPosition>
                        </items>
                    </columns>
                </items>
            </tab>
        </items>
    </content>
</jcr:root>
