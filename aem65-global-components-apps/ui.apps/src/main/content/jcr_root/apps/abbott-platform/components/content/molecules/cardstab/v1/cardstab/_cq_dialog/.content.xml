<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Cards Tab">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <icons
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Icons or Images"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <listFrom
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Select Icons or Images"
                                                name="./listFrom">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <icons
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Icons"
                                                        value="cardtabicon"/>
                                                    <images
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Images"
                                                        value="cardtabimage"/>
                                                </items>
                                            </listFrom>
                                            <icons
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin tab-iconPicker-full-visible"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="cardtabicon"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <icons
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Tabs Icons">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                            margin="{Boolean}true"
                                                            name="./icons"
                                                            variant="large">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <active
                                                                    jcr:primaryType="nt:unstructured"
                                                                    jcr:title="Active Icon"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <activeicon
                                                                            granite:class="abbott-icon-picker"
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceSuperType="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Icon"
                                                                            name="./activeIcon"/>
                                                                        <activecolor
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                                            path="/apps/abbott-platform/components/content/atoms/tabs/v1/tabs/cq:dialog/content/items/tabs/items/icons/items/columns/items/column/items/icons/field/items/active/items/activecolor"/>
                                                                    </items>
                                                                </active>
                                                                <inactive
                                                                    jcr:primaryType="nt:unstructured"
                                                                    jcr:title="Inactive Icon"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <inactiveicon
                                                                            granite:class="abbott-icon-picker"
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceSuperType="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Icon"
                                                                            name="./inactiveIcon"/>
                                                                        <inactivecolor
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                                            path="/apps/abbott-platform/components/content/atoms/tabs/v1/tabs/cq:dialog/content/items/tabs/items/icons/items/columns/items/column/items/icons/field/items/inactive/items/inactivecolor"/>
                                                                    </items>
                                                                </inactive>
                                                            </items>
                                                        </field>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="cardtabicon"/>
                                                    </icons>
                                                </items>
                                            </icons>
                                            <tabimages
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="cardtabimage"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <images
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Tabs Images">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./tabImage">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <column
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <image
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                                            <items jcr:primaryType="nt:unstructured">
                                                                                <file
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                                    allowUpload="{Boolean}false"
                                                                                    autoStart="{Boolean}false"
                                                                                    class="cq-droptarget"
                                                                                    fieldLabel="Image Asset"
                                                                                    fileNameParameter="./fileName"
                                                                                    fileReferenceParameter="./fileReference"
                                                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                                    multiple="{Boolean}false"
                                                                                    name="./file"
                                                                                    title="Upload Image Asset"
                                                                                    uploadUrl="${suffix.path}"
                                                                                    useHTML5="{Boolean}true"/>
                                                                            </items>
                                                                        </image>
                                                                    </items>
                                                                </column>
                                                            </items>
                                                        </field>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="tabimg"/>
                                                    </images>
                                                </items>
                                            </tabimages>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </icons>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
