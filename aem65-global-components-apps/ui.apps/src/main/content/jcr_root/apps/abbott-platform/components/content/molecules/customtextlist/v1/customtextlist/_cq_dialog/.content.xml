<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Custom Text List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[abbottplatform.author.customtextlist]">
    <content
        granite:class="[customList-validation]"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <listType
                                                granite:class="cq-dialog-dropdown-showhide-multival"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select the type of list"
                                                fieldLabel="List Type"
                                                name="./listType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <option1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Icon List"
                                                        value="icon"/>
                                                    <option2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bullet List"
                                                        value="bullet"/>
                                                    <option3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Numbered List"
                                                        value="number"/>
                                                    <option4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Alphabetic List"
                                                        value="alphabet"/>
                                                    <option5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Non-indented List"
                                                        value="non-indented"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".listtype-showhide-target"/>
                                            </listType>
                                            <headerTitle
												jcr:primaryType="nt:unstructured"
												sling:resourceType="cq/gui/components/authoring/dialog/richtext"
												fieldDescription="Title"
												fieldLabel="Header Title"
												name="./headerTitle"
												removeSingleParagraphContainer="{Boolean}true"
												useFixedInlineToolbar="{Boolean}true">
												<rtePlugins
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/rtePlugins"/>
												<uiSettings
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/uiSettings"/>
												<htmlRules 
													jcr:primaryType="nt:unstructured"
													sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/htmlRules"/>
											</headerTitle>
                                            <textAboveList
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Text Above List"
                                                name="./textAboveList"/>
                                            <textBelowList
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Text Below List"
                                                name="./textBelowList"/>
                                            <lists
                                                granite:class="lists-multi"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Add the links to be listed in the stack"
                                                fieldLabel="Lists">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./customLists">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                        margin="{Boolean}false"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <listTitle
															jcr:primaryType="nt:unstructured"
															sling:resourceType="cq/gui/components/authoring/dialog/richtext"
															fieldLabel="Title"
															name="./text"
															removeSingleParagraphContainer="{Boolean}true"
															useFixedInlineToolbar="{Boolean}true">
															<rtePlugins
																jcr:primaryType="nt:unstructured"
																sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/rtePlugins"/>
															<uiSettings
																jcr:primaryType="nt:unstructured"
																sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/uiSettings"/>
															<htmlRules 
																jcr:primaryType="nt:unstructured"
																sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/htmlRules"/>
														</listTitle>
                                                        <listDestination
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Destination URL"
                                                            id="customListUrl"
                                                            name="./link"
                                                            rootPath="/content"/>
                                                        <externalLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            name="./external"
                                                            text="Open in a New Tab"
                                                            uncheckedValue="false"
                                                            value="true"/>
                                                        <external-link-popup
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            fieldDescription="Show redirect confirmation popup for external link"
                                                            name="./redirectConfirm"
                                                            text="Confirm redirect popup"
                                                            uncheckedValue="false"
                                                            value="{Boolean}true"/>
                                                        <iconPicker
                                                            granite:class="listtype-showhide-target"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <granite:data
                                                                jcr:primaryType="nt:unstructured"
                                                                showhidetargetvalue="icon"/>
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <iconpicker
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                                    path="/apps/abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"/>
                                                            </items>
                                                        </iconPicker>
                                                        <text
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldDescription="Please enter text"
                                                            fieldLabel="Text"
                                                            name="./listText"
                                                            useFixedInlineToolbar="{Boolean}true">
															<rtePlugins
																jcr:primaryType="nt:unstructured"
																sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/rtePlugins"/>
															<uiSettings
																jcr:primaryType="nt:unstructured"
																sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/uiSettings"/>
															<htmlRules 
																jcr:primaryType="nt:unstructured"
																sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/htmlRules"/>
														</text>
                                                    </items>
                                                </field>
                                            </lists>
                                            <numberType
                                                granite:class="hide listtype-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <stack-title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Title"
                                                        fieldLabel="Title"
                                                        name="./stackTitle"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="number"/>
                                            </numberType>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                   <configItem
                        jcr:primaryType="nt:unstructured"
                        jcr:title="ID/Class Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <configTab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                path="/apps/abbott-platform/components/core/customconfig/v1/customconfig/cq:dialog/content/items/tabs/items/configItem/items/columns/items/column"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </configItem>
					<gradient
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                        path="abbott-platform/components/core/backgroundoptions/v1/backgroundoptions/cq:dialog/content/items/tabs/items/gradient"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
