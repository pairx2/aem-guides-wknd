<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-form-text__editDialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Search "
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <searchTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Placeholder to modify the Search label."
                                        fieldLabel="Search Title"
                                        name="./searchTitle"/>
                                    <searchIcon
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Search Icon"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <iconSearch
                                                        granite:class="abbott-icon-picker"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Please enter path for search icon image"
                                                        fieldLabel="Search Icon"
                                                        name="./searchIcon"
                                                        value="abt-icon abt-icon-search"/>
                                                </items>
                                            </well>
                                        </items>
                                    </searchIcon>
                                    <closeIcon
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Close Icon"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <iconClose
                                                        granite:class="abbott-icon-picker"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Please enter path for close icon image"
                                                        fieldLabel="Close Icon"
                                                        name="./closeIcon"
                                                        value="abt-icon abt-icon-cancel"/>
                                                </items>
                                            </well>
                                        </items>
                                    </closeIcon>
                                </items>
                            </columns>
                        </items>
                    </tab1>
                    <tab2
                        granite:hide="${!cqDesign.enableFilters}"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Filters"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <filters
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Add the Search Filters"
                                        fieldLabel="Search Filters">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./filters">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                margin="{Boolean}false"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <fieldName
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Field Name"
                                                    fieldLabel="Field Name"
                                                    name="./fieldName"/>
                                                <fieldValue
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Field Value"
                                                    fieldLabel="Field Value"
                                                    name="./fieldValue"/>
                                            </items>
                                        </field>
                                    </filters>
                                </items>
                            </columns>
                        </items>
                    </tab2>
                    <tab3
                        granite:hide="${!cqDesign.enableSort}"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Sort"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <sortResults
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Add the Sorting Fields for the Search Results"
                                        fieldLabel="Sort Search">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./sortOrder">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                margin="{Boolean}false"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <sortFieldName
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the Sort Field Name"
                                                    fieldLabel="Sort Field Name"
                                                    name="./sortFieldName"/>
                                                <sortOrder
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Please choose Sorting Order"
                                                    fieldLabel="Sorting Order"
                                                    name="./sortingOrder"
                                                    text="Sort Order">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <asc
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Ascending"
                                                            value="ascending"/>
                                                        <desc
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Descending"
                                                            value="descending"/>
                                                    </items>
                                                </sortOrder>
                                            </items>
                                        </field>
                                    </sortResults>
                                </items>
                            </columns>
                        </items>
                    </tab3>
                     <tab4
                        granite:hide="${!cqDesign.enablePredictiveSearchCheck}"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Predictive Search"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <enablePredictiveSearch
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Select to Enable Query Suggestion Service"
                                        fieldLabel="Select to Enable Query Suggestion Service"
                                        name="./enablePredictiveSearch"
                                        text="Enable Predictive Search in Global Search"
                                        uncheckedValue="{Boolean}false"
                                        value="{Boolean}true"/>
                                </items>
                            </columns>
                        </items>
                    </tab4>
                    <configItem
                        jcr:primaryType="nt:unstructured"
                        jcr:title="ID/Class Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <configTab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                path="/apps/abbott-platform/components/core/customconfig/v1/customconfig/cq:dialog/content/items/tabs/items/configItem/items/columns/items/column"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </configItem>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
