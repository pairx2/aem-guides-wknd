<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
    <items jcr:primaryType="nt:unstructured">
        <heading
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/heading"
            level="{Long}4"
            text="Navigation Image"/>
        <image
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
            fieldDescription="Please add Image to showcase in Navigation"
            fieldLabel="Navigation Image"
            name="./image"
            rootPath="/content/dam"/>
        <imageAlt
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            fieldDescription="Please provide Alternate Text for sub category image"
            fieldLabel="Image Alternate Text"
            name="./imageAlt"/>
        <badgeRequired
            granite:class="cq-dialog-checkbox-showhide"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
            name="./badgeRequired"
            text="Is Badge Required?"
            uncheckedValue="false"
            value="true">
            <granite:data
                jcr:primaryType="nt:unstructured"
                cq-dialog-checkbox-showhide-target=".badgeFields-showhide-target"/>
        </badgeRequired>
        <badgeRequired_x0040_TypeHint
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
            name="./badgeRequired@TypeHint"
            value="Boolean"/>
        <badgefields
            granite:class="hide badgeFields-showhide-target"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/well">
            <items
                    jcr:primaryType="nt:unstructured"
                    sling:resourceSuperType="abbott-platform/components/content/atoms/badge/v1/badge/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items">
                <badgePosition
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="Please select the badge position."
                    fieldLabel="Badge Position"
                    name="./badgePosition"
                    text="Badge Position">
                    <items jcr:primaryType="nt:unstructured">
                        <option1
                            jcr:primaryType="nt:unstructured"
                            text="Top Right"
                            value="top-right"/>
                        <option2
                            jcr:primaryType="nt:unstructured"
                            text="Top Left"
                            value="top-left"/>
                    </items>
                </badgePosition>
            </items>
            <granite:data
                jcr:primaryType="nt:unstructured"
                showhidetargetvalue="true"/>
        </badgefields>
    </items>
</jcr:root>
