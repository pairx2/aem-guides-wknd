<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
    <items jcr:primaryType="nt:unstructured">
        <title
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            fieldLabel="Title"
            name="./jcr:title"/>
        <subtitle
				granite:hide="{Boolean}true"
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
				fieldLabel="Sub-Title"
				name="./subtitle"/>
        <link
            jcr:primaryType="nt:unstructured"
            sling:resourceType="cq/gui/components/coral/common/form/pagefield"
            fieldDescription="Link to a content page, external URL or page anchor."
            fieldLabel="Link"
            name="./link"/>
        <action
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
            fieldDescription="Please check to open the link in new tab"
            name="./action"
            text="Open link in a new tab?"
            uncheckedValue="_self"
            value="_blank"/>
        <external
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
            name="./external"
            text="Is External Link?"
            uncheckedValue="false"
            value="true"/>
        <external_x0040_TypeHint
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
            name="./external@TypeHint"
            value="Boolean"/>
    </items>
</jcr:root>
