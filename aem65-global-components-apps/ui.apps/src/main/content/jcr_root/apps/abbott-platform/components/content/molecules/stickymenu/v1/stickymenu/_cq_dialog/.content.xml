<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Sticky Menu"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkstacktype
                                                jcr:primaryType="nt:unstructured"
                                                fieldDescription="Please select the type"
                                                fieldLabel="Sticky Menu Type"
                                                name="./linkStackType">
                                                <items jcr:primaryType="nt:unstructured"
												sling:hideChildren="[option1]">
                                                </items>
                                            </linkstacktype>
                                            <siteselect
                                                jcr:primaryType="nt:unstructured">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <site-list-default
                                                        jcr:primaryType="nt:unstructured"
                                                        fieldDescription="Please enter a text for Menu title to be shown in Mobile."
                                                        fieldLabel="Menu Title (Mobile Only)"/>
													<sites
														jcr:primaryType="nt:unstructured"
														fieldLabel="Sites/Menu Sections">
														<field
															jcr:primaryType="nt:unstructured">
															<items
																jcr:primaryType="nt:unstructured">
																<site-name
																	jcr:primaryType="nt:unstructured"
																	fieldLabel="Site/Menu Name">
																</site-name>
																<site-url
																	jcr:primaryType="nt:unstructured"
																	fieldLabel="Site URL/Menu Section ID">
																</site-url>
															</items>
														</field>
													</sites>
                                                </items>
                                            </siteselect>
                                            <hideStickyMenu
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./hideStickyMenu"
                                                text="Hide Sticky Menu"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="ID"
                                                name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
