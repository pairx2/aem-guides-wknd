<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Tab Search Configuration"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Tab Search Categories"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <fieldName
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Search Query Field Name to be used in search query"
                                            fieldLabel="Search Query Field Name"
                                            name="./fieldName"/>
                                    <error
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The error message will be displayed in case the localized title is not added to the tag"
                                            fieldLabel="Please Enter the Error message"
                                            name="./errorMessage"/>
                                    <categories
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            composite="{Boolean}true"
                                            fieldDescription="Add categories by clicking Add"
                                            fieldLabel="Categories">
                                        <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                name="./category">
                                            <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                    margin="{Boolean}false"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Tag Title to be displayed in this tab"
                                                        fieldLabel="Title"
                                                        name="./tagTitle"/>
                                                <tagPath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                        allowBulkEdit="{Boolean}true"
                                                        autocreateTag="{Boolean}true"
                                                        fieldDescription="Select the desired tag to bind to this item"
                                                        fieldLabel="Tag path"
                                                        multiple="{Boolean}false"
                                                        name="./tag"
                                                        rootPath="/content/cq:tags"/>
                                                <searchType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        emptyOption="{Boolean}true"
                                                        fieldDescription="Select the searchtype"
                                                        fieldLabel="Search Type"
                                                        name="./searchType">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <option1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Site Search"
                                                                value="sitesearch"/>
                                                        <option2
                                                                jcr:primaryType="nt:unstructured"
                                                                text="FAQ Search"
                                                                value="faqsearch"/>
                                                        <option3
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Related Site Search"
                                                                value="relatedsitesearch"/>
                                                    </items>
                                                </searchType>
                                            </items>
                                        </field>
                                    </categories>
                                </items>
                            </columns>
                        </items>
                    </tab1>
                       <configItem
                        jcr:primaryType="nt:unstructured"
                        jcr:title="ID/Class Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <configTab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                path="/apps/abbott-platform/components/core/customconfig/v1/customconfig/cq:dialog/content/items/tabs/items/configItem/items/columns/items/column"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </configItem>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>