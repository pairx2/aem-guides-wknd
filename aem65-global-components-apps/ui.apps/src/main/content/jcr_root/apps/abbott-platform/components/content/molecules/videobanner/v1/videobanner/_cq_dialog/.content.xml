<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Video Banner"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="core.wcm.components.image.v2.editor">
    <content
            granite:class="cmp-image__editor"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Tabs"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <text
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <header_copy_heading
                                                    granite:class="coral-Heading coral-Heading--4"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="HEADER COPY"/>
                                            <pretitleGroup
                                                    granite:hide="${cqDesign.pretitleHidden}"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="id"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <pretitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldLabel="Pretitle"
                                                            name="./pretitle"
                                                            removeSingleParagraphContainer="{Boolean}true"
                                                            useFixedInlineToolbar="{Boolean}true">
                                                        <rtePlugins
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/rtePlugins"/>
                                                        <uiSettings
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/uiSettings"/>
                                                        <htmlRules
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/htmlRules"/>
                                                    </pretitle>
                                                    <pretitleFromLinkedPage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:hideResource="{Boolean}true"/>
                                                </items>
                                            </pretitleGroup>
                                            <titleGroup
                                                    granite:hide="${cqDesign.titleHidden}"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="id"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldLabel="Title"
                                                            name="./title"
                                                            removeSingleParagraphContainer="{Boolean}true"
                                                            useFixedInlineToolbar="{Boolean}true">
                                                        <rtePlugins
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/rtePlugins"/>
                                                        <uiSettings
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/uiSettings"/>
                                                        <htmlRules
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/htmlRules"/>
                                                    </title>
                                                    <titleFromLinkedPage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:hideResource="{Boolean}true"/>
                                                </items>
                                            </titleGroup>
                                            <descriptionGroup
                                                    granite:hide="${cqDesign.descriptionHidden}"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="id"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <description
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:include="/apps/abbott-platform/components/core/text/v1/text"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldLabel="Description"
                                                            name="./description"
                                                            useFixedInlineToolbar="{Boolean}true">
                                                        <rtePlugins
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/rtePlugins"/>
                                                        <uiSettings
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/uiSettings"/>
                                                        <htmlRules
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/abbott-platform/components/core/text/v1/text/htmlRules"/>
                                                    </description>
                                                    <descriptionFromLinkedPage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:hideResource="{Boolean}true"/>
                                                </items>
                                            </descriptionGroup>
                                            <cta_heading
                                                    granite:class="coral-Heading coral-Heading--4"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="CTA"/>
                                            <buttons
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    fieldLabel="Number of CTA"
                                                    max="{Long}2"
                                                    min="{Long}0"
                                                    name="./numberOfButtons"
                                                    value="{Long}1"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Video"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <video_src_heading
                                                    granite:class="coral-Heading coral-Heading--4"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="VIDEO SOURCE"/>
                                            <video-type
                                                    granite:class="cq-dialog-dropdown-showhide"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Please select video&#xa;type"
                                                    fieldLabel="Video Type"
                                                    name="./videoType">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        cq-dialog-dropdown-showhide-target=".video-type-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <option1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Brightcove"
                                                            value="brightCove"/>
                                                    <option2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Limelight"
                                                            value="limeLight"/>
                                                    <option3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="DAM Video"
                                                            value="dam"/>
                                                </items>
                                            </video-type>
                                            <brightcove-option
                                                    granite:class="hide video-type-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="brightCove"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <account-id
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please enter account&#xa;ID of Brightcove&#xa;account"
                                                                    fieldLabel="Account ID"
                                                                    name="./accountID"
                                                                    required="{Boolean}true"/>
                                                            <video-id
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please enter video ID&#xa;of Brightcove video"
                                                                    fieldLabel="Video ID"
                                                                    name="./videoID"
                                                                    required="{Boolean}true"/>
                                                            <player-id
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please enter player&#xa;ID of Brightcove&#xa;account"
                                                                    fieldLabel="Player ID"
                                                                    name="./playerID"
                                                                    required="{Boolean}true"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </brightcove-option>
                                            <limelight-option
                                                    granite:class="hide video-type-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="limeLight"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <org-id
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please enter organisation&#xa;ID of Limelight&#xa;account"
                                                                    fieldLabel="Organisation ID"
                                                                    name="./orgID"/>
                                                            <video-id
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please enter Media ID&#xa;of Limelight video"
                                                                    fieldLabel="Media ID"
                                                                    name="./mediaID"
                                                                    required="{Boolean}true"/>
                                                            <limelight-player-id
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please enter player&#xa;ID of Limelight"
                                                                    fieldLabel="Limelight Player ID"
                                                                    name="./limelightPlayerID"
                                                                    required="{Boolean}true"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </limelight-option>
                                            <dam-option
                                                    granite:class="hide video-type-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="dam"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <dam-video
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Please provide DAM&#xa;path for the video"
                                                                    fieldLabel="DAM URL"
                                                                    name="./damVideo"
                                                                    required="{Boolean}true"
                                                                    rootPath="/content/dam"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </dam-option>
                                            <fallbackImg_src_heading
                                                    granite:class="coral-Heading coral-Heading--4"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="FALLBACK IMAGE"/>
                                            <fallbackImage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <file
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                            class="cq-droptarget"
                                                            fileNameParameter="./fileName"
                                                            fileReferenceParameter="./fileReference"
                                                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                            name="./file"/>
                                                </items>
                                            </fallbackImage>
                                            <videoctrl_src_heading
                                                    granite:class="coral-Heading coral-Heading--4"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="VIDEO CONTROLS"/>
                                            <playIcon
                                                    granite:class="abbott-icon-picker"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Play Icon"
                                                    name="./playIcon"
                                                    path="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                    required="{Boolean}true"/>
                                            <playIconLabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Play Icon Label"
                                                    name="./playIconLabel"/>
                                            <pauseIcon
                                                    granite:class="abbott-icon-picker"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Pause Icon"
                                                    name="./pauseIcon"
                                                    path="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                    required="{Boolean}true"/>
                                            <pauseIconLabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Pause Icon Label"
                                                    name="./pauseIconLabel"/>
                                            <playvideo-loop
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    checked="{Boolean}true"
                                                    name="./playVideoInLoop"
                                                    text="Play video in loop"
                                                    value="true"/>
                                            <autoplay
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Check to play video automatically on page load for desktop and tablet views. Mobile will ONLY see the fallback image to reduce required bandwidth. "
                                                    name="./autoPlay"
                                                    text="Enable autoplay in desktop and tablet view"
                                                    value="true"/>
                                            <videostyles_heading
                                                    granite:class="coral-Heading coral-Heading--4"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="VIDEO STYLES"/>
                                            <dimorbrightenVideo
                                                    granite:class="cq-dialog-checkbox-showhide"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Check to apply gradient overlay on the video for better color contrast."
                                                    name="./dimorbrightenVideo"
                                                    text="Dim or brighten video"
                                                    uncheckedValue="{Boolean}false"
                                                    value="true">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        cq-dialog-checkbox-showhide-target=".dimbright-video-type-showhide-target"/>
                                            </dimorbrightenVideo>
                                            <dimorbrightenVideo-option
                                                    granite:class="hide dimbright-video-type-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="true"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <gradient
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                            path="abbott-platform/components/core/backgroundoptions/v1/backgroundoptions/cq:dialog/content/items/tabs/items/gradient"/>
                                                </items>
                                            </dimorbrightenVideo-option>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <cq:styles
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                    <configItem
                            jcr:primaryType="nt:unstructured"
                            jcr:title="ID/Class Config"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <configTab
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                    path="/apps/abbott-platform/components/core/customconfig/v1/customconfig/cq:dialog/content/items/tabs/items/configItem/items/columns/items/column"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </configItem>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
