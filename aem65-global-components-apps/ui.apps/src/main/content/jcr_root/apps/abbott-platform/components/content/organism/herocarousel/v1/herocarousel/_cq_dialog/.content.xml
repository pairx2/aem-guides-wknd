<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Hero Carousel"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            granite:class="cmp-carousel__editor"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Properties"
                            sling:orderBefore="accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <cardContainer
                                                    granite:hide="${!cqDesign.enableICardCarouselProps}"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="id"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <cardsPerScreen
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                            fieldDescription="Please enter number of cards to be shown in one frame"
                                                            fieldLabel="Number of cards to be shown at a time"
                                                            name="./cardsPerScreen"/>
                                                    <cardsPerScroll
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                            fieldDescription="Please enter number of cards to be scrolled at a time"
                                                            fieldLabel="Number of cards to be scrolled at a time"
                                                            name="./cardsPerScroll"/>
                                                </items>
                                            </cardContainer>
                                            <hideIndicators
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="id"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Hide the Indicators"
                                                    name="./hideIndicators"
                                                    text="Hide Indicators"
                                                    value="{Boolean}true"/>
                                            <iconRight
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Right Icon"
                                                    sling:orderBefore="id"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                            granite:class="coral-Heading coral-Heading--4"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                            text="Right Icon"/>
                                                    <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <iconRight
                                                                    granite:class="abbott-icon-picker"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceSuperType="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please select Right Icon image"
                                                                    name="./iconRight"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </iconRight>
                                            <iconLeft
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Left Icon"
                                                    sling:orderBefore="id"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                            granite:class="coral-Heading coral-Heading--4"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                            text="Left Icon"/>
                                                    <well
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <iconLeft
                                                                    granite:class="abbott-icon-picker"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceSuperType="abbott-platform/components/core/iconpicker/v1/iconpicker/cq:dialog/content/items/icon"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Please select the Left Icon image"
                                                                    name="./iconLeft"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </iconLeft>
                                            <id
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideResource="{Boolean}true"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="HTML ID attribute to apply to the component."
                                                    fieldLabel="ID"
                                                    name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <configItem
                            jcr:primaryType="nt:unstructured"
                            jcr:title="ID/Class Config"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <configTab
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/libs/granite/ui/components/coral/foundation/include"
                                                    path="/apps/abbott-platform/components/core/customconfig/v1/customconfig/cq:dialog/content/items/tabs/items/configItem/items/columns/items/column"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </configItem>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
