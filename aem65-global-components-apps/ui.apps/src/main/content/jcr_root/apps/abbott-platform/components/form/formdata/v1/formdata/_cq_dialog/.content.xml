<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Form Data"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <dataSource jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Data Source"
                                name="./dataSource"
                                required="{Boolean}true"/>
                    <targetDataSource jcr:primaryType="nt:unstructured"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                      fieldLabel="Target Data Source"
                                      name="./targetDataSource"
                                      required="{Boolean}true"/>
                    <displayOutput jcr:primaryType="nt:unstructured"
                                   sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                   fieldLabel="Display Output"
                                   name="./displayOutput"
                                   required="{Boolean}true"/>
                    <numberOfButtons
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                            fieldLabel="Number on Buttons"
                            max="{Long}4"
                            min="{Long}0"
                            name="./numberOfButtons"/>
                    <title jcr:primaryType="nt:unstructured"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                           fieldLabel="Title"
                           name="./title"/>
                    <buttonPosition
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Button Position"
                            name="./buttonPosition">
                        <items jcr:primaryType="nt:unstructured">
                            <title jcr:primaryType="nt:unstructured"
                                   text="Title"
                                   value="title"/>
                            <side jcr:primaryType="nt:unstructured"
                                  text="Side"
                                  value="side"/>
                            <bottom jcr:primaryType="nt:unstructured"
                                    text="Bottom"
                                    value="bottom"/>
                        </items>
                    </buttonPosition>
                </items>
            </column>
        </items>
    </content>
</jcr:root>