{
  "_badges": {
    "selector": ".a-badges",
    "title": "Badges",
    "variables": [{
        "label": "Width",
        "type": "unit",
        "config": {
          "default": {
            "key": "--badge-width",
            "value": ""
          }
        }
      },

      {
        "label": "Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--badge-height",
            "value": ""
          }
        }
      },

      {
        "label": "Background Fill Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--badge-bg-color",
            "value": "--secondary-color"
          }
        }
      },

      {
        "label": "Border Radius",
        "type": "TRBL",
        "config": {
          "isBorderRadius": true,
          "default": {
            "key": "--badge-border-radius",
            "value": ""
          }
        }
      },

      {
        "label": "Background Image",
        "type": "text",
        "config": {
          "default": {
            "key": "--badge-bg-image",
