        "type": "font",
        "config": {
          "default": {
            "key": "--badge-font-family",
            "value": ""
          }
        }
      },

      {
        "label": "Label Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--badge-font-size",
            "value": ""
          }
        }
      },

      {
        "label": "Label Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--badge-font-color",
            "value": "--primary-color"
          }
        }
      },

      {
        "label": "Label Letter Spacing",
        "type": "unit",
        "config": {
          "default": {
            "key": "--badge-font-letter-spacing",
            "value": ""
          }
        }
