{
  "_checkbox": {
    "selector": ".a-checkbox",
    "title": "Checkbox",
    "groups": {
      "default-appearance": {
        "default-state": [
          {
            "label": "Label Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--checkbox-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Label Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--checkbox-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Label Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Checkbox Button Check Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-tick-color",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Checkbox Button Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-custom-bg",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Checkbox Button Border",
            "type": "border",
            "config": {
              "default": {
                "key": "--checkbox-custom-border",
                "value": "1px solid --gray-darkest-color"
              }
            }
          },

          {
            "label": "Checkbox Button Margin",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "bottom": {
                  "key": "--checkbox-margin-bottom",
                  "value": ""
                }
              }
            }
          },

          {
            "label": "Checkbox Button Padding",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "left": {
                  "key": "--checkbox-padding-left",
                  "value": ""
                },
                "right": {
                  "key": "--checkbox-padding-right",
                  "value": ""
                }
              }
            }
          },

          {
            "label": "Checkbox Button Padding (RTL)",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "left": {
                  "key": "--checkbox-rtl-padding-left",
                  "value": ""
                },
                "right": {
                  "key": "--checkbox-rtl-padding-right",
                  "value": ""
                }
              }
            }
          }

        ],
        "checked": [
          {
            "label": "Checkbox Button Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-checked-bg",
                "value": "--primary-color"
              }
            }
          }
        ],
        "Indeterminate": [
          {
            "label": "Checkbox Button Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-indeterminate-checked-bg",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Checkbox Button check Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-indeterminate-tick-color",
                "value": "--primary-color"
              }
            }
          }
        ],

        "disabled": [
          {
            "label": "Checkbox Button Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-disabled-bg-color",
                "value": "--gray-lightest-color"
              }
            }
          },

          {
            "label": "Checkbox Button check Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-disabled-color",
                "value": "--gray-darker-color"
              }
            }
          }
        ],

        "error": [
          {
            "label": "Checkbox Button Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--checkbox-error-color",
                "value": "--danger-color"
              }
            }
          }
        ]
      }
    }
  }
}
