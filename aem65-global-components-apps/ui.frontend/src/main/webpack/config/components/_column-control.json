{
  "_column-control": {
    "selector": ".columncontrol",
    "title": "Column Control",
    "variables": [
      {
        "label": "Border (Normal)",
        "type": "border",
        "config": {
          "default": {
              "key": "--column-border-normal",
              "value": "1px solid --gray-darker-color"
          }
        }
      },

      {
        "label": "Border (Light)",
        "type": "border",
        "config": {
          "default": {
              "key": "--column-border-light",
              "value": "1px solid --gray-dark-color"
          }
        }
      },

      {
        "label": "Background Fill Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--column-background-color",
            "value": "--gray-dark-color"
          }
        }
      },
      {
        "label": "Background Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--column-background-size",
            "value": "300px auto"
          }
        }
      },

      {
        "label": "Background Size (Medium)",
        "type": "unit",
        "config": {
          "default": {
            "key": "--column-background-size-md",
            "value": "300px auto"
          }
        }
      },

      {
        "label": "Background Position",
        "type": "TRBL",
        "config": {
          "default": {
            "key": "--column-background-position",
            "value": "top -150px right -180px"
          }
        }
      }
    ]
  }
}
