        "dark":[
          {
            "label": "Text Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--container-dark-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Background Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--container-dark-bg",
                "value": "--white-color"
