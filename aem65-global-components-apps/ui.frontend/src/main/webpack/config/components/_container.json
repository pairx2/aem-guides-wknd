            "config": {
              "default": {
                "key": "--container-light-bg",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Padding",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "isResponsive": true,
              "default": {
                "top":{
                  "key": "--container-padding-top",
                  "value": ""
