                "left":{
                  "key": "--container-padding-left",
                  "value": ""
                },
                "right": {
                  "key": "--container-padding-right",
                  "value": ""
                }
              },
              "mobile": {
                "top":{
                  "key": "--container-padding-top-mobile",
                  "value": ""
                },
                "bottom": {
                  "key": "--container-padding-bottom-mobile",
                  "value": ""
                },
                "left":{
                  "key": "--container-padding-left-mobile",
                  "value": ""
                },
                "right": {
                  "key": "--container-padding-right-mobile",
                  "value": ""
