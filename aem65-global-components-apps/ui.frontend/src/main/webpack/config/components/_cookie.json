{
  "_cookie": {
    "selector": ".m-cookiebar",
    "title": "Cookie Bar",
    "variables": [
      {
        "label": "Paragraph Text Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--cookies-para-font-size",
            "value": ""
          }
        }
      },

      {
        "label": "Paragraph Line Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--cookies-para-line-height",
            "value": ""
          }
        }
      },

      {
        "label": "Paragraph Text Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--cookies-para-color",
            "value": "--black-color"
          }
        }
      },

      {
        "label": "Link Font Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--cookie-link-font-size",
            "value": ""
          }
        }
      },

      {
        "label": "Country Dropdown Arrow Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--cookie-bar-dropdown-border-color",
            "value": "--white-color"
          }
        }
      },

      {
        "label": "Country Dropdown Fill Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--cookie-bar-dropdown-bg-color",
            "value": "--white-color"
          }
        }
      },

      {
        "label": "Country Dropdown Links Font Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--cookie-bar-link-font-size",
            "value": ""
          }
        }
      },

      {
        "label": "Divider Border Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--cookie-divider",
            "value": "--gray-dark-color"
          }
        }
      },

      {
        "label": "Divider Margin",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "left": {
              "key": "--cookie-divider-margin-left-lg",
              "value": ""
            },
            "right": {
              "key": "--cookie-divider-margin-right-lg",
              "value": ""
            }
          }
        }
      },

      {
        "label": "Text Margin",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "top": {
              "key": "--cookie-bar-text-margin-top",
              "value": ""
            },
            "right": {
              "key": "--cookie-bar-text-margin-right",
              "value": ""
            }
          }
        }
      },

      {
        "label": "Padding",
        "type": "TRBL",
        "config": {
          "default": {
            "key": "--cookie-bar-padding",
            "value": ""
          }
        }
      },

      {
        "label": "Border Radius",
        "type": "TRBL",
        "config": {
          "isBorderRadius": true,
          "default": {
            "key": "--cookie-bar-border-radius",
            "value": ""
          }
        }
      },

      {
        "label": "Transition",
        "type": "text",
        "config": {
          "default": {
            "key": "--cookie-bar-transition",
            "value": "ease-in-out 1s"
          }
        }
      }
    ]
  }
}
