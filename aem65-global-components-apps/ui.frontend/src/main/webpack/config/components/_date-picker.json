{
  "_date-picker": {
    "selector": ":root",
    "title": "Date picker",
    "variables": [
      {
        "label": "Input Field Max Width",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-input-field-width",
            "value": "180px"
          }
        }
      },
      {
        "label": "Input Field Margin",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "right": {
              "key": "--date-input-field-margin-r",
              "value": "180px"
            }
          }
        }
      },

      {
        "label": "Help Message Margin",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "top": {
              "key": "--date-input-help-msg-margin-t",
              "value": "-15px"
            }
          }
        }
      },

      {
        "label": "Calendar Day Shadow (Hover)",
        "type": "shadow",
        "config": {
          "default": {
            "key": "--date-picker-box-shadow",
            "value": ""
          }
        }
      },

      {
        "label": "Calendar Position Spacer",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-position-spacer",
            "value": ""
          }
        }
      },

      {
        "label": "Icon Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-icon-size",
            "value": ""
          }
        }
      },

      {
        "label": "Icon Selected Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--date-picker-icon-selected-color",
            "value": ""
          }
        }
      },

      {
        "label": "Month Text Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-month-font-size",
            "value": ""
          }
        }
      },

      {
        "label": "Month Text Line Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-month-line-height",
            "value": ""
          }
        }
      },

      {
        "label": "Day Text Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-weekday-line-height",
            "value": ""
          }
        }
      },

      {
        "label": "Day Line Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-month-line-height",
            "value": ""
          }
        }
      },

      {
        "label": "Day Margin",
        "type": "TRBL",
        "config": {
          "default": {
              "key": "--date-picker-days-margin",
              "value": ""
          }
        }
      },

      {
        "label": "Error Text size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-input-field-error-font-size",
            "value": ""
          }
        }
      },

      {
        "label": "Start Day Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--date-picker-start-date-bg",
            "value": "--secondary-color"
          }
        }
      },

      {
        "label": "Current Day Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--date-picker-current-date",
            "value": "--gray-light-color"
          }
        }
      },

      {
        "label": "Selected Day Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--date-picker-select-color",
            "value": "--secondary-color"
          }
        }
      },

      {
        "label": "Selected Day Border Radius",
        "type": "TRBL",
        "config": {
          "isBorderRadius": true,
          "default": {
            "key": "--date-picker-date-border-radius",
            "value": ""
          }
        }
      },

      {
        "label": "Calendar Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-wrap-height",
            "value": "380px"
          }
        }
      },

      {
        "label": "Calendar Width",
        "type": "unit",
        "config": {
          "default": {
            "key": "--date-picker-wrap-width",
            "value": "412px"
          }
        }
      },

      {
        "label": "Input Field Error Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--date-input-field-error",
            "value": "--danger-color"
          }
        }
      }
    ]
  }
}
