{
  "_dropdown": {
    "selector": ".a-dropdown",
    "title": "Dropdown",
    "groups": {
      "dropdown-field": {
        "default-state": [
          {
            "label": "Background Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-field-bg-color",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Border",
            "type": "border",
            "config": {
              "default": {
                "key": "--dropdown-field-border",
                "value": "1px solid --gray-darkest-color"
              }
            }
          },

          {
            "label": "Border Radius",
            "type": "TRBL",
            "config": {
              "isBorderRadius": true,
              "default": {
                "key": "--dropdown-field-border-radius",
                "value": "6px"
              }
            }
          },

          {
            "label": "Field Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--dropdown-field-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Field Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--dropdown-field-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Field Placeholder Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-placeholder-color",
                "value": "--gray-darker-color"
              }
            }
          },

          {
            "label": "Field Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-selected-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--dropdown-field-height",
                "value": ""
              }
            }
          },

          {
            "label": "Max-Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--dropdown-field-max-height",
                "value": ""
              }
            }
          },

          {
            "label": "Margin",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--dropdown-margin",
                "value": "0"
              }
            }
          },

          {
            "label": "Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--dropdown-field-padding",
                "value": ""
              }
            }
          },

          {
            "label": "Padding (RTL)",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--dropdown-field-padding-rtl",
                "value": ""
              }
            }
          }
        ],
        "active": [
          {
            "label": "Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-active-border-color",
                "value": "--primary-color"
              }
            }
          }
        ],

        "disabled": [
          {
            "label": "Background Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-disabled-bg-color",
                "value": "--gray-lightest-color"
              }
            }
          },

          {
            "label": "Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-disabled-border",
                "value": "--gray-lightest-color"
              }
            }
          },

          {
            "label": "Field Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-disabled-selected-color",
                "value": "--gray-color"
              }
            }
          }

        ],

        "error": [

          {
            "label": "Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-error-border-color",
                "value": "--danger-color"
              }
            }
          }

        ]
      },

      "dropdown-menu": {
        "default-state": [
          {
            "label": "Background Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-menu-bg-color",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Bottom Border",
            "type": "border",
            "config": {
              "default": {
                "key": "--dropdown-menu-list-border-bottom",
                "value": "1px solid --gray-color"
              }
            }
          },

          {
            "label": "Border Radius",
            "type": "TRBL",
            "config": {
              "isBorderRadius": true,
              "default": {
                "key": "--dropdown-menu-border-radius",
                "value": "4px"
              }
            }
          },

          {
            "label": "shadow",
            "type": "shadow",
            "config": {
              "default": {
                "key": "--dropdown-menu-box-shadow",
                "value": "--shadow-small"
              }
            }
          },

          {
            "label": "Margin",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "top": {
                  "key": "--dropdown-menu-margin-top",
                  "value": "2px"
                }
              }
            }
          },

          {
            "label": "Max-Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--dropdown-menu-max-height",
                "value": ""
              }
            }
          },

          {
            "label": "Scrollbar Thumb Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-scroll-bg-color",
                "value": "--gray-light-color"
              }
            }
          },

          {
            "label": "Scrollbar Track Border",
            "type": "border",
            "config": {
              "default": {
                "key": "--dropdown-scroll-border",
                "value": "1px solid --gray-light-color"
              }
            }
          },

          {
            "label": "Scrollbar track border Radius",
            "type": "TRBL",
            "config": {
              "isBorderRadius": true,
              "default": {
                "key": "--dropdown-scroll-border-radius",
                "value": "4px"
              }
            }
          },

          {
            "label": "Scrollbar Max Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--dropdown-scroll-max-height",
                "value": "180px"
              }
            }
          }

        ]
      },

      "dropdown-menu-item": {
        "default-state":[
          {
            "label": "Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--dropdown-menu-option-padding",
                "value": ""
              }
            }
          },

          {
            "label": "Padding (RTL)",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--dropdown-menu-option-padding-rtl",
                "value": ""
              }
            }
          }

        ],
        "hover": [
          {
            "label": "Menu Item Background Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--dropdown-menu-option-hover-bg-color",
                "value": "--secondary-color"
              }
            }
          }
        ]
      }
    }
  }
}
