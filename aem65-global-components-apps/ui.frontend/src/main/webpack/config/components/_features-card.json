{
  "_features-card": {
    "selector": ".o-features-card",
    "title": "Features Card",
    "groups": {
      "default-appearance": {
        "default-state": [
          {
            "label": "Title Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-title-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Title Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-title-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Title Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--feature-card-title-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Paragraph Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-para-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Paragraph Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-para-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Paragraph Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--feature-card-para-color",
                "value": "--gray-dark-color"
              }
            }
          },

          {
            "label": "Number Font",
            "type": "font",
            "config": {
              "default": {
                "key": "--feature-card-number-font",
                "value": ""
              }
            }
          },

          {
            "label": "Margin",
            "type": "TRBL",
            "config": {
              "default": {
                  "key": "--feature-card-margin",
                  "value": ""
              }
            }
          },

          {
            "label": "Image Min Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-image-min-height",
                "value": "80px"
              }
            }
          },

          {
            "label": "Image Max Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-image-max-height",
                "value": "160px"
              }
            }
          }
        ]
      },

      "faqs": {
        "default-state": [
          {
            "label": "Background Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--feature-card-faq-background",
                "value": "--gray-lightest-color"
              }
            }
          },

          {
            "label": "Shadow",
            "type": "shadow",
            "config": {
              "default": {
                "key": "--feature-card-faq-box-shadow",
                "value": "--shadow-small"
              }
            }
          },

          {
            "label": "Padding",
            "type": "TRBL",
            "config": {
              "default": {
                  "key": "--feature-card-faq-padding",
                  "value": ""
              }
            }
          },

          {
            "label": "Container Padding",
            "type": "TRBL",
            "config": {
              "default": {
                  "key": "--feature-card-faq-container-padding",
                  "value": ""
              }
            }
          },

          {
            "label": "Width",
            "type": "unit",
            "config": {
              "isResposive": true,
              "default": {
                "key": "--feature-card-faq-width",
                "value": "154px"
              },
              "mobile":{
                "key": "--feature-card-faq-sm-width",
                "value": "200px"
              }
            }
          },

          {
            "label": "Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-faq-height",
                "value": "160px"
              }
            }
          },

          {
            "label": "Title Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--feature-card-faq-title-color",
                "value": "--gray-darker-color"
              }
            }
          },

          {
            "label": "Title Margin",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "top":{
                  "key": "--feature-card-faq-title-margin-top",
                  "value": ""
                }
              }
            }
          },

          {
            "label": "Image Max Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--feature-card-faq-img-max-height",
                "value": "82px"
              }
            }
          }
        ],
        "hover":[
          {
            "label": "Background Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--feature-card-faq-background-hover",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Title Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--feature-card-faq-title-hover-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Title Font Weight",
            "type": "weight",
            "config": {
              "default": {
                "key": "--feature-card-faq-title-hover-font",
                "value": "700"
              }
            }
          }
        ]
      }
    }
  }
}
