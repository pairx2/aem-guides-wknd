{
  "_header": {
    "selector": ".o-header",
    "title": "Header",
    "groups": {
      "default-appearance": {
        "default-state": [
          {
            "label": "Top Bar Background Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-top-bar-bg",
                "value": "--secondary-color"
              }
            }
          },

          {
            "label": "Logo Section Bottom Border",
            "type": "border",
            "config": {
              "default": {
                "key": "--header-border-bottom",
                "value": "1px solid --secondary-color"
              }
            }
          },

          {
            "label": "Shadow",
            "type": "shadow",
            "config": {
              "default": {
                "key": "--header-box-shadow",
                "value": "0 2px 4px 0 rgba(0,0,0,0.24), 0 4px 8px -2px rgba(141,141,148,0.28)"
              }
            }
          },

          {
            "label": "Logo Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--header-logo-padding",
                "value": "0.75rem 0"
              }
            }
          },

          {
            "label": "Logo Transition",
            "type": "text",
            "config": {
              "default": {
                "key": "--header-logo-trasition",
                "value": "all 0.2s ease"
              }
            }
          },

          {
            "label": "Top Bar Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--header-top-bar-height",
                "value": "44px"
              }
            }
          },

          {
            "label": "Cancel Icon Padding (RTL)",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "left": {
                  "key": "--header-expand-cancel-icon",
                  "value": "5px"
                }
              }
            }
          },

          {
            "label": "Search Icon Padding (RTL)",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "right": {
                  "key": "--header-expand-icon-search",
                  "value": "15px"
                }
              }
            }
          },

          {
            "label": "Sign-Up Icon Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--header-signup-icon-font-size",
                "value": "1rem"
              }
            }
          },

          {
            "label": "Icon Padding",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "right": {
                  "key": "--header-icons-padding-right",
                  "value": "2rem"
                }
              }
            }
          },

          {
            "label": "Input Padding (RTL)",
            "type": "TRBL",
            "config": {
              "default": {
                  "key": "--header-input-padding",
                  "value": "0.5rem 2.5rem 0.5rem 2.5rem"
              }
            }
          },

          {
            "label": "Link Stack Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-link-stack-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Overlay Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-overlay-bg",
                "value": "$overlay-bg"
              }
            }
          },

          {
            "label": "Search Overlay Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-serch-overlay",
                "value": "rgba(0, 0, 0, 0.48)"
              }
            }
          },

          {
            "label": "Search Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-search-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Search Position",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "isResponsive": true,
              "mobile": {
                "right": {
                  "key": "--header-search-mobile-right",
                  "value": ""
                }
              }
            }
          }
        ]
      },
      "dropdown-menu": {
        "default-state": [
          {
            "label": "Top Bar Dropdown Link Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-dropdown-link-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Dropdown Padding (RTL)",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default":{
                "right": {
                  "key": "--header-dropdown-spacing-rtl",
                  "value": "32px"
                }
              }
            }
          }
        ]
      },
      "Sticky-header":{
        "default-state":[
          {
            "label": "Background Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-sticky-section",
                "value": "--white-color"
              }
            }
          },
          {
            "label": "Nav Bar Fill Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--header-sticky-nav-bar-bg",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Logo Section Bottom Border (overlay)",
            "type": "border",
            "config": {
              "default": {
                "key": "--header-sticky-logo-border-bottom",
                "value": "1px solid --secondary-color"
              }
            }
          }
        ]
      }
    }
  }
}


