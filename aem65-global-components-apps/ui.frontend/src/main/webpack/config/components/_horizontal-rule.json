{
  "_horizontal-rule": {
    "selector": ".a-rule",
    "title": "Horizontal Rule",
    "groups":{
      "default-appearance": {
        "default-state": [
          {
            "label": "Border Top Width",
            "type": "unit",
            "config": {
              "default": {
                "key": "--rule-border-top-width",
                "value": "1px"
              }
            }
          },
          {
            "label": "Border Top Style",
            "type": "unit",
            "config": {
              "default": {
                "key": "--rule-border-top-style",
                "value": "solid"
              }
            }
          }
        ]
      },
      "black": {
        "default-state": [
          {
            "label": "Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--rule-black-color",
                "value": "--black-color"
              }
            }
          }
        ]
      },
      "white": {
        "default-state": [
          {
            "label": "Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--rule-white-color",
                "value": "--white-color"
              }
            }
          }
        ]
      }
    }
  }
}
