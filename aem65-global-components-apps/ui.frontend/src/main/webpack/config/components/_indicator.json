{
  "_indicator": {
    "selector": ".a-indicator, [data-js-component=\"carousel\"]",
    "title": "Indicator",
    "groups": {
      "default-appearance": {
        "default-state": [
          {
            "label": "Width",
            "type": "unit",
            "config": {
              "default": {
                "key": "--indicator-width",
                "value": "8px"
              }
            }
          },
          {
            "label": "Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--indicator-height",
                "value": "46px"
              }
            }
          },
          {
            "label": "Dot Margin",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--indicator-dot-margin",
                "value": "0 4px"
              }
            }
          },
          {
            "label": "Border Width",
            "type": "unit",
            "config": {
              "default": {
                "key": "--indicator-border-width",
                "value": "1px"
              }
            }
          },
          {
            "label": "Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-border-color",
                "value": "--gray-darker-color"
              }
            }
          },
          {
            "label": "Border Radius",
            "type": "TRBL",
            "config": {
              "isBorderRadius": true,
              "default": {
                "key": "--indicator-border-radius",
                "value": "8px"
              }
            }
          }
        ]
      },
      "light":{
        "default-state": [
          {
            "label": "Dot color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-dot",
                "value": "--transparent-color"
              }
            }
          }

        ],
        "hover": [
          {
            "label": "Dot color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-dot-hover-color",
                "value": "--gray-lighter-color"
              }
            }
          }

        ],
        "active": [
          {
            "label": "Dot color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-dot-active",
                "value": "--black-color"
              }
            }
          }

        ]
      },
      "dark":{
        "default-state": [
          {
            "label": "Container Fill color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-container-dark-bg",
                "value": "--black-color"
              }
            }
          },
          {
            "label": "Dot color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-dot",
                "value": "--white-color"
              }
            }
          },
          {
            "label": "Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-light-dot",
                "value": "--white-color"
              }
            }
          }
        ],
        "hover": [
          {
            "label": "Dot color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-dot-hover-color",
                "value": "--gray-lighter-color"
              }
            }
          }

        ],
        "active": [
          {
            "label": "Dot color",
            "type": "color",
            "config": {
              "default": {
                "key": "--indicator-light-dot-active",
                "value": "--white-color"
              }
            }
          }

        ]
      }
    }
  }
}
