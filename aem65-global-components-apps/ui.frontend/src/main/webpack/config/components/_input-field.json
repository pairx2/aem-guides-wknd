{
  "_input-field": {
    "selector": ".a-input-field",
    "title": "Input Field",
    "groups": {
      "default-appearance": {
        "default-state": [

          {
            "label": "Margin",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--input-field-margin",
                "value": "16px 0"
              }
            }
          },

          {
            "label": "Input Placeholder Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-placeholder-color",
                "value": "--gray-color"
              }
            }
          },

          {
            "label": "Border",
            "type": "border",
            "config": {
              "default": {
                "key": "--input-field-border",
                "value": "1px solid --gray-darkest-color"
              }
            }
          },

          {
            "label": "Border Radius",
            "type": "TRBL",
            "config": {
              "isBorderRadius": true,
              "default": {
                "key": "--input-field-border-radius",
                "value": "4px"
              }
            }
          },

          {
            "label": "Label Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-label-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Label Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-label-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Label Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-label-color",
                "value": "--gray-darker-color"
              }
            }
          },

          {
            "label": "Input Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Input Background Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-bg",
                "value": "--white-color"
              }
            }
          },

          {
            "label": "Help Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-form-text-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Help Text Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-form-text-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Help Text Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-form-text-color",
                "value": "--gray-darker-color"
              }
            }
          },

          {
            "label": "Input Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--input-field-padding",
                "value": "15px 16px 13px"
              }
            }
          },

          {
            "label": "Input Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-height",
                "value": "48px"
              }
            }
          },

          {
            "label": "Input Max Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-max-height",
                "value": "48px"
              }
            }

          },

          {
            "label": "Field Left Icon Margin",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "left": {
                  "key": "--input-field-icon-spacing-left",
                  "value": "10px"
                }
              }
            }
          },

          {
            "label": "Field Left Icon Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--input-field-left-icon-padding",
                "value": "15px 16px 13px 48px"
              }
            }
          },

          {
            "label": "Field Right Icon Margin",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "right": {
                  "key": "--input-field-icon-spacing-right",
                  "value": "10px"
                }
              }
            }
          },

          {
            "label": "Field Right Icon Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--input-field-right-icon-padding",
                "value": "15px 48px 13px 16px"
              }
            }
          },

          {
            "label": "Field Double Icon Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--input-field-double-icon-padding",
                "value": "15px 16px 13px"
              }
            }
          }
        ],
        "read-only/disabled": [
          {
            "label": "Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-readonly-color",
                "value": "--gray-lightest-color"
              }
            }
          }
        ],
        "error": [
          {
            "label": "Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-error-color",
                "value": "--danger-color"
              }
            }
          },

          {
            "label": "Validation Icon Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-message-icon",
                "value": "12px"
              }
            }
          }

        ]
      },
      "password-indicator":{
        "default-state": [
          {
            "label": "height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-password-progress-height",
                "value": "4px"
              }
            }
          },

          {
            "label": "Margin",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--input-field-password-progress-margin-y",
                "value": "8px 0"
              }
            }
          },

          {
            "label": "Progress Indicator Margin",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--input-field-password-progress-margin-x",
                "value": "0 3px"
              }
            }
          },

          {
            "label": "Progress Indicator Border Radius",
            "type": "TRBL",
            "config": {
              "isBorderRadius": true,
              "default": {
                "key": "--input-field-password-progress-border-radius",
                "value": "2px"
              }
            }
          },

          {
            "label": "Progress Indicator Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-password-progress-color",
                "value": "--gray-light-color"
              }
            }
          },

          {
            "label": "Progress Indicator Color (Weak)",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-filed-password-progress-weak-color",
                "value": "--danger-color"
              }
            }
          },

          {
            "label": "Progress Indicator Color (Medium)",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-filed-password-progress-medium-color",
                "value": "--warning-color"
              }
            }
          },

          {
            "label": "Progress Indicator Color (Strong)",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-filed-password-progress-strong-color",
                "value": "--success-color"
              }
            }
          }

        ]
      },
      "tooltip":{
        "default-state": [
          {
            "label": "Font Family",
            "type": "font",
            "config": {
              "default": {
                "key": "--input-field-password-tooltip-font-family",
                "value": ""
              }
            }
          },
          {
            "label": "Tooltip Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-password-tooltip-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Tooltip Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-password-tooltip-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Tooltip Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-password-tooltip-font-color",
                "value": "--primary-color"
              }
            }
          },

          {
            "label": "Tooltip Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-password-tooltip-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Tooltip Width",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-password-tooltip-width",
                "value": "220px"
              }
            }
          },

          {
            "label": "Tooltip Pwd Label Margin",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "right":{
                  "key": "--input-field-password-indicator-margin-right",
                  "value": "5px"
                }
              }
            }
          },

          {
            "label": "Tooltip Pwd Icon Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--input-field-password-tooltip-icon-size",
                "value": "10px"
              }
            }
          },

          {
            "label": "Tooltip Pwd Icon Padding",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "right":{
                  "key": "--input-field-password-icon-padding-right",
                  "value": "5px"
                }
              }
            }
          },

          {
            "label": "Tooltip Pwd Icon Color (Error)",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-password-danger-color",
                "value": "--danger-color"
              }
            }
          },

          {
            "label": "Tooltip Pwd Icon Color (Success)",
            "type": "color",
            "config": {
              "default": {
                "key": "--input-field-password-success-color",
                "value": "--success-color"
              }
            }
          },

          {
            "label": "Tooltip Description Margin",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "bottom":{
                  "key": "--input-field-password-tooltip-desc-margin-bottom",
                  "value": "12px"
                }
              }
            }
          }
        ]
      }
    }
  }
}
