{
  "_link": {
    "selector": ".a-link",
    "title": "Link",
    "groups": {
      "default-appearance": {
        "default-state": [
          {
            "label": "Link Font Family",
            "type": "font",
            "config": {
              "default": {
                "key": "--link-font-family",
                "value": ""
              }
            }
          },
          {
            "label": "Link Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--link-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Link Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--link-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Link Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--link-color",
                "value": "--primary-80-color"
              }
            }
          },

          {
            "label": "Icon Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--link-icon-size",
                "value": "20px"
              }
            }
          },

          {
            "label": "Link Icon Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--link-icon-color",
                "value": "--gray-darkest-color"
              }
            }
          },

          {
            "label": "Link Icon Margin (Icon only mode)",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "left": {
                  "key": "--link-icon-margin-left",
                  "value": "10px"
                }
              }
            }
          },


          {
            "label": "Link Text Padding",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "left": {
                  "key": "--link-padding-left",
                  "value": "30px"
                },
                "right": {
                  "key": "--link-padding-right",
                  "value": "30px"
                }
              }
            }
          }
        ],
        "active": [
          {
            "label": "Link Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--link-active-color",
                "value": "--black-color"
              }
            }
          }
        ],
        "focus": [
          {
            "label": "Link Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--link-focus-color",
                "value": "--black-color"
              }
            }
          }
        ]
      }
    }
  }
}
