{
  "_pagination": {
    "selector": ".a-pagination",
    "title": "Pagination",
    "groups": {
      "default-appearance": {
        "default-state": [
          {
            "label": "Link Text Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--pagination-link-font-size",
                "value": ""
              }
            }
          },

          {
            "label": "Link Text Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--pagination-link-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Link Text Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--pagination-link-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Link Padding",
            "type": "TRBL",
            "config": {
              "default": {
                "key": "--pagination-link-padding",
                "value": "10px 15px"
              }
            }
          },

          {
            "label": "Border",
            "type": "border",
            "config": {
              "default": {
                "key": "--pagination-border",
                "value": "1px solid --black-color"
              }
            }
          },

          {
            "label": "Border Radius",
            "type": "TRBL",
            "config": {
              "isBorderRadius": true,
              "default": {
                "key": "--pagination-border-radius",
                "value": "4px"
              }
            }
          },

          {
            "label": "Link Border Width",
            "type": "unit",
            "config": {
              "default": {
                "key": "--pagination-border-width",
                "value": "1px"
              }
            }
          },

          {
            "label": "Icon Size",
            "type": "unit",
            "config": {
              "default": {
                "key": "--pagination-link-icon-size",
                "value": "1rem"
              }
            }
          },

          {
            "label": "Icon Padding",
            "type": "TRBL",
            "config": {
              "isMultiVariable": true,
              "default": {
                "top": {
                  "key": "--pagination-link-icon-padding-top",
                  "value": "0.875rem"
                },
                "bottom": {
                  "key": "--pagination-link-icon-padding-bottom",
                  "value": "0.875rem"
                }
              }
            }
          }

        ],
        "hover":[
          {
            "label": "Link Text Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--pagination-hover-link-color",
                "value": "--black-color"
              }
            }
          },
          {
            "label": "Link Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--pagination-hover-border-color",
                "value": "--black-color"
              }
            }
          }
        ],
        "active":[
          {
            "label": "Link Text Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--pagination-hover-link-color",
                "value": "--black-color"
              }
            }
          },

          {
            "label": "Bottom Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--pagination-active-link-width",
                "value": "2px"
              }
            }
          },

          {
            "label": "Link Background Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--pagination-active-bg-color",
                "value": "--secondary-color"
              }
            }
          },

          {
            "label": "Link Border Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--pagination-active-border-color",
                "value": "--secondary-color"
              }
            }
          }

        ]
      }
    }
  }
}
