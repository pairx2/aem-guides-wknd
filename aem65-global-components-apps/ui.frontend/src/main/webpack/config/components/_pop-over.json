{
  "_pop-over": {
    "selector": ".m-popover",
    "title": "Pop Over",
    "variables": [
      {
        "label": "Paragraph Text Style",
        "type": "unit",
        "config": {
          "default": {
            "key": "--popover-para-font-size",
            "value": "#{$font-size-14}"
          }
        }
      },
      {
        "label": "Border Radius",
        "type": "TRBL",
        "config": {
          "isBorderRadius": true,
          "default": {
            "key": "--popover-border-radius",
            "value": "4px"
          }
        }
      },
      {
        "label": "Padding",
        "type": "TRBL",
        "config": {
          "isXY": true,
          "default": {
            "top": {
              "key": "--popover-padding-x",
              "value": ""
            },
            "right": {
              "key": "--popover-padding-y",
              "value": ""
            }
          }
        }
      },
      {
        "label": "Shadow",
        "type": "shadow",
        "config": {
          "default": {
            "key": "--popover-box-shadow",
            "value": "0 2px 4px 0 rgba(0,0,0,0.24), 0 4px 8px -2px rgba(141,141,148,0.28)"
          }
        }
      },
      {
        "label": "Edit Shadow",
        "type": "shadow",
        "config": {
          "default": {
            "key": "--popover-edit-box-shadow",
            "value": "#{$popover-box-shadow}"
          }
        }
      },
      {
        "label": "Max Width",
        "type": "unit",
        "config": {
          "default": {
            "key": "--popover-edit-max-width",
            "value": "345px"
          }
        }
      }
    ]
  }
}
