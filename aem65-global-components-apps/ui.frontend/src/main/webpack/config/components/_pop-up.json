{
    "_pop-up": {
      "selector": ".generic-modal",
      "title": "Pop Up",
      "variables": [
        {
          "label": "Paragraph Font Size",
          "type": "unit",
          "config": {
            "default": {
              "key": "--modal-para-font-size",
              "value": ""
            }
          }
        },

        {
            "label": "Paragraph Line Height",
            "type": "unit",
            "config": {
              "default": {
                "key": "--modal-para-line-height",
                "value": ""
              }
            }
          },

          {
            "label": "Paragraph Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--modal-para-color",
                "value": "--gray-darker-color"
              }
            }
          },

          {
            "label": "Margin Right",
            "type": "TRBL",
            "config": {
                "isMultiVariable": true,
              "default": {
                "right": {
                  "key": "--modal-body-margin-x",
                  "value": ""
              }
              }
            }
          },

          {
            "label": "Margin Left",
            "type": "TRBL",
            "config": {
                "isMultiVariable": true,
              "default": {
                "right": {
                  "key": "--modal-body-margin-xx",
                  "value": ""
              }
              }
            }
          },

          {
            "label": "Padding",
            "type": "TRBL",
            "config": {
              "isXY": true,
              "default": {
                "top": {
                  "key": "--modal-body-padding-y",
                  "value": ""
              },
              "right": {
                  "key": "--modal-body-padding-x",
                  "value": ""
              }
              }
            }
          },

          {
            "label": "Shadow",
            "type": "shadow",
            "config": {
              "default": {
                "key": "--modal-box-shadow",
                "value": ""
              }
            }
          },

          {
            "label": "Close Icon Color",
            "type": "color",
            "config": {
              "default": {
                "key": "--modal-close-icon-color",
                "value": "--gray-darker-color"
              }
            }
          },

          {
            "label": "Danger Icon",
            "type": "color",
            "config": {
              "default": {
                "key": "--modal-danger-icon-color",
                "value": "$dark-red"
              }
            }
          },

          {
            "label": "Footer Padding",
            "type": "TRBL",
            "config": {
              "isXY": true,
              "default": {
                "top": {
                  "key": "--modal-footer-padding-y",
                  "value": ""
              },
              "right": {
                  "key": "--modal-footer-padding-x",
                  "value": ""
              }
              }
            }
          }
      ]
    }
  }
