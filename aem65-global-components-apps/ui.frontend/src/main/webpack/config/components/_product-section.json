{
  "_product-section": {
    "selector": ".o-product-section",
    "title": "Product Section",
    "variables": [
      {
        "label": "Section Padding",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "top": {
              "key": "--product-section-padding",
              "value": ""
            }
          }
        }
      },
      {
        "label": "Title Padding",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "bottom": {
              "key": "--product-section-title-padding",
              "value": ""
            }
          }
        }
      },
      {
        "label": "Paragraph Text Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--product-section-para-font-size",
            "value": "0.875rem"
          }
        }
      },
      {
        "label": "Paragraph Line Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--product-section-para-line-height",
            "value": "1.25rem"
          }
        }
      },
      {
        "label": "Button Wrapper Padding",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "top": {
              "key": "--product-section-btn-wrapper-padding",
              "value": "2.8125rem"
            }
          }
        }
      },
      {
        "label": "Button Margin",
        "type": "TRBL",
        "config": {
          "isResponsive": true,
          "mobile": {
            "key": "--product-section--button-margin",
            "value": "24px 0 0"
          }
        }
      },
      {
        "label": "Content Padding",
        "type": "unit",
        "config": {
          "isResponsive": true,
          "default": {
            "key": "--product-section-content-padding",
            "value": "80px"
          },
          "mobile": {
            "key": "--product-section-content-padding-mobile",
            "value": "15px"
          }
        }
      },
      {
        "label": "Video Wrapper Width",
        "type": "unit",
        "config": {
          "isResponsive": true,
          "tablet": {
            "key": "--product-section-image-wrapper-width",
            "value": "#{$card-height}"
          },
          "mobile": {
            "key": "--product-section-image-wrapper-width",
            "value": "#{$card-height}"
          }
        }
      },
      {
        "label": "Image Max-Width (Small)",
        "type": "unit",
        "config": {
          "default": {
            "key": "--product-section-image-max-width",
            "value": "440px"
          }
        }
      },
      {
        "label": "Image Max-Height (Large)",
        "type": "unit",
        "config": {
          "default": {
            "key": "--product-section-image-max-height",
            "value": "502px"
          }
        }
      },
      {
        "label": "Media Margin",
        "type": "TRBL",
        "config": {
          "isMultiVariable": true,
          "default": {
            "top": {
              "key": "--product-section-image-margin-top",
              "value": "40px"
            }
          }
        }
      },
      {
        "label": "Image Caption Text Style",
        "type": "unit",
        "config": {
          "default": {
            "key": "--product-section-image-caption-font-size",
            "value": "0.875rem"
          }
        }
      }
    ]
  }
}
