{
    "_products-compare": {
        "selector": ".o-products-compare",
        "title": "Products Compare",
        "groups": {
            "default-appearance": {
                "default-state": [
                    {
                        "label": "Background Fill Color",
                        "type": "color",
                        "config": {
                            "default": {
                                "key": "--products-compare-bg-color",
                                "value": "--grey-white-color"
                            }
                        }
                    },
                    {
                        "label": "Padding",
                        "type": "TRBL",
                        "config": {
                            "isResponsive": true,
                            "default": {
                                "key": "--products-compare-lg-padding",
                                "value": "88px 45px 110px"
                            },
                            "tablet": {
                                "key": "--products-compare-md-padding",
                                "value": "68px auto 47px auto"
                            },
                            "mobile": {
                                "key": "--products-compare-sm-padding",
                                "value": "60px auto 56px auto"
                            }
                        }
                    },
                    {
                        "label": "Wrapper Margin",
                        "type": "TRBL",
                        "config": {
                            "isMultiVariable": true,
                            "isResponsive": true,
                            "default": {
                                "left": {
                                    "key": "--products-compare-wrapper-left-margin-lg",
                                    "value": "14rem"
                                }
                            },
                            "mobile": {
                                "left": {
                                    "key": "--products-compare-wrapper-left-margin-sm",
                                    "value": "9rem"
                                }
                            }
                        }
                    },
                    {
                        "label": "Wrapper Padding",
                        "type": "TRBL",
                        "config": {
                            "isMultiVariable": true,
                            "default": {
                                "bottom": {
                                    "key": "--products-compare-wrapper-padding-bottom",
                                    "value": "24px"
                                }
                            }
                        }
                    },
                    {
                        "label": "Width",
                        "type": "unit",
                        "config": {
                            "isResponsive": true,
                            "default": {
                                    "key": "--products-compare-wrapper-width-lg",
                                    "value": "80%"
                                },
                                "mobile": {
                                    "key": "--products-compare-wrapper-width-sm",
                                    "value": "auto"
                                }
                        }
                    },
                    {
                        "label": "Scrollbar Border Radius",
                        "type": "TRBL",
                        "config": {
                            "isBorderRadius": true,
                            "default": {
                                "key": "--products-compare-wrapper-scroll-border-radius",
                                "value": "4px"
                            }
                        }
                    },
                    {
                        "label": "Scrollbar Handle Fill Color",
                        "type": "color",
                        "config": {
                            "default": {
                                "key": "--products-compare-wrapper-scroll-bg-color",
                                "value": "--gray-color"
                            }
                        }
                    },
                    {
                        "label": "Scrollbar Track Border",
                        "type": "border",
                        "config": {
                            "default": {
                                "key": "--products-compare-wrapper-scroll-border",
                                "value": "1px solid --gray-light-color"
                            }
                        }
                    }
                ]
            },
            "table-comparison": {
                "default-state": [
                    {
                        "label": "Background Fill Color",
                        "type": "color",
                        "config": {
                            "default": {
                                "key": "--products-compare-bg-color",
                                "value": "--grey-white-color"
                            }
                        }
                    },
                    {
                        "label": "Margin",
                        "type": "TRBL",
                        "config": {
                            "isMultiVariable": true,
                            "isResponsive": true,
                            "default": {
                                "top": {
                                    "key": "--products-compare-table-link-margin-top-lg",
                                    "value": "32px"
                                }
                            },
                            "mobile": {
                                "top": {
                                    "key": "--products-compare-table-link-margin-top-sm",
                                    "value": "16px"
                                }
                            }
                        }
                    },
                    {
                        "label": "Column Height",
                        "type": "unit",
                        "config": {
                            "isResponsive": true,
                            "default": {
                                    "key": "--products-compare-table-fixed-col-height",
                                    "value": "72px"
                                },
                                "mobile": {
                                    "key": "--products-compare-table-fixed-col-mobile-height",
                                    "value": "55px"
                                }
                        }
                    },
                    {
                        "label": "Even Row Background Fill Color",
                        "type": "color",
                        "config": {
                            "default": {
                                "key": "--products-compare-table-even-row-bg-color",
                                "value": "--white-color"
                            }
                        }
                    },
                    {
                        "label": "Odd Row Background Fill Color",
                        "type": "color",
                        "config": {
                            "default": {
                                "key": "--products-compare-table-odd-row-bg-color",
                                "value": "--white-color"
                            }
                        }
                    },
                    {
                        "label": "Table Cell Border",
                        "type": "border",
                        "config": {
                            "default": {
                                "key": "--products-compare-td-border",
                                "value": "2px solid --grey-white-color"
                            }
                        }
                    },
                    {
                        "label": "Table Cell Text Style",
                        "type": "unit",
                        "config": {
                          "default": {
                            "key": "--products-compare-td-font-size",
                            "value": "#{$font-size-14}"
                          }
                        }
                      },
                      {
                        "label": "Table Cell Padding",
                        "type": "TRBL",
                        "config": {
                            "isResponsive": true,
                            "default": {
                                "key": "--products-compare-td-padding-lg",
                                "value": "16px"
                            },
                            "mobile": {
                                "key": "--products-compare-td-padding-sm",
                                "value": "8px"
                            }
                        }
                    },
                    {
                        "label": "Table Cell H4 Style",
                        "type": "unit",
                        "config": {
                          "default": {
                            "key": "--products-compare-td-h4-font-size",
                            "value": "#{$h4-font-size}"
                          }
                        }
                      },
                      {
                        "label": "Table Cell H5 Style",
                        "type": "unit",
                        "config": {
                          "default": {
                            "key": "--products-compare-td-h5-font-size",
                            "value": "#{$h5-font-size}"
                          }
                        }
                      },
                      {
                        "label": "Table Header Shadow",
                        "type": "shadow",
                        "config": {
                          "default": {
                            "key": "--products-compare-thead-box-shadow",
                            "value": "10px 0px 20px -5px var(--white-color)"
                          }
                        }
                      },
                      {
                        "label": "Table Header Blank Column Shadow",
                        "type": "shadow",
                        "config": {
                          "default": {
                            "key": "--products-compare-thead-blank-col-box-shadow",
                            "value": "10px 0px 20px -5px var(--grey-white-color)"
                          }
                        }
                      }
                ]
              }
        }
    }
}
