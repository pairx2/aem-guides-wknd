{
  "_progress-bar": {
    "selector": ".a-progressbar",
    "title": "Progress Bar",
    "variables": [
      {
        "label": "Height (Large)",
        "type": "unit",
        "config": {
          "default": {
            "key": "--progress-height",
            "value": ".5rem"
          }
        }
      },
      {
        "label": "Height (Small)",
        "type": "unit",
        "config": {
          "default": {
            "key": "--progress-height-sm",
            "value": ".25rem"
          }
        }
      },


      {
        "label": "Border Radius",
        "type": "TRBL",
        "config": {
          "isBorderRadius": true,
          "default": {
            "key": "--progress-border-radius",
            "value": ".25rem"
          }
        }
      },

      {
        "label": "Background Fill Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--progress-bar-color",
            "value": "--white-color"
          }
        }
      },

      {
        "label": "Handle Fill Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--progress-bar-bg",
            "value": "--gray-darker-color"
          }
        }
      },

      {
        "label": "Track Border",
        "type": "border",
        "config": {
          "default": {
            "key": "--progress-bar-border",
            "value": "1px solid --gray-color"
          }
        }
      }

    ]
  }
}
