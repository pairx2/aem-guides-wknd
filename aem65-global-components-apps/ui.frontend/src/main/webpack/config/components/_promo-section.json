{
  "_promo-section": {
    "selector": ".o-promo",
    "title": "Promo Section",
    "variables": [
      {
        "label": "Logo Padding",
        "type": "TRBL",
        "config": {
          "isResponsive": true,
          "default": {
            "key": "--promo-section-logo-padding-xl",
            "value": "0 0 12px"
          },
          "tablet": {
            "key": "--promo-section-logo-padding-md",
            "value": "0 0 8px"
          },
          "mobile": {
            "key": "--promo-section-logo-padding",
            "value": "0 0 4px"
          }
        }
      },

      {
        "label": "Title Padding",
        "type": "TRBL",
        "config": {
          "isResponsive": true,
          "default": {
            "key": "--promo-section-title-padding-xl",
            "value": "12px 0 0"
          },
          "tablet": {
            "key": "--promo-section-title-padding-md",
            "value": "8px 0 0"
          },
          "mobile": {
            "key": "--promo-section-title-padding",
            "value": "4px 0 0"
          }
        }
      },

      {
        "label": "Text Padding",
        "type": "TRBL",
        "config": {
          "default": {
            "key": "--promo-section-text-padding",
            "value": "8px 0 4px"
          }
        }
      },

      {
        "label": "Button Wrapper Padding",
        "type": "TRBL",
        "config": {
          "default": {
            "key": "--promo-section-btn-wrapper-padding",
            "value": "20px 0 0"
          }
        }
      },

      {
        "label": "Button Group Padding",
        "type": "TRBL",
        "config": {
          "isResponsive":true,
          "default": {
            "key": "--promo-section-btn-padding-lg",
            "value": "10px 0 0"
          },
          "mobile": {
            "key": "--promo-section-btn-padding",
            "value": "10px 20px 0"
          }
        }
      }
    ]
  }
}
