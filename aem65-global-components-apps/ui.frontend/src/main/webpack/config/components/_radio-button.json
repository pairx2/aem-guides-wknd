{
    "_radio-button": {
      "selector": ".a-radio",
      "title": "Radio Button",
      "groups": {
        "default-appearance": {
          "default-state": [
            {
              "label": "Label Text Size",
              "type": "unit",
              "config": {
                "default": {
                  "key": "--radio-text-font-size",
                  "value": ""
                }
              }
            },
  
            {
              "label": "Label Line Height",
              "type": "unit",
              "config": {
                "default": {
                  "key": "--radio-text-line-height",
                  "value": ""
                }
              }
            },
  
            {
              "label": "Label Color",
              "type": "color",
              "config": {
                "default": {
                  "key": "--radio-text-color",
                  "value": "--black-color"
                }
              }
            },

            {
                "label": "Label Margin",
                "type": "TRBL",
                "config": {
                  "isMultiVariable": true,
                  "default": {
                    "bottom": {
                      "key": "--radio-label-margin-bottom",
                      "value": ""
                    }
                  }
                }
              },
  
            {
              "label": "Radio Button Dot Color",
              "type": "color",
              "config": {
                "default": {
                  "key": "--radio-dot-color",
                  "value": "--white-color"
                }
              }
            },

            {
                "label": "Radio Button Fill Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--radio-custom-bg",
                    "value": "--white-color"
                  }
                }
              },
           
            {
              "label": "Radio Button Border",
              "type": "border",
              "config": {
                "default": {
                  "key": "--radio-custom-border",
                  "value": "1px solid --gray-darkest-color"
                }
              }
            },
  
            {
              "label": "Radio Button Margin",
              "type": "TRBL",
              "config": {
                "isMultiVariable": true,
                "default": {
                  "bottom": {
                    "key": "--radio-margin-bottom",
                    "value": ""
                  }
                }
              }
            },
  
            {
              "label": "Radio Button Padding",
              "type": "TRBL",
              "config": {
                "isMultiVariable": true,
                "default": {
                  "left": {
                    "key": "--radio-padding-left",
                    "value": ""
                  },
                  "right": {
                    "key": "--radio-padding-right",
                    "value": ""
                  }
                }
              }
            },
  
            {
              "label": "Radio Button Padding (RTL)",
              "type": "TRBL",
              "config": {
                "isMultiVariable": true,
                "default": {
                  "left": {
                    "key": "--radio-rtl-padding-left",
                    "value": ""
                  },
                  "right": {
                    "key": "--radio-rtl-padding-right",
                    "value": ""
                  }
                }
              }
            }
  
          ],
          "checked": [
            {
              "label": "Radio Button Fill Color",
              "type": "color",
              "config": {
                "default": {
                  "key": "---radio-checked-bg",
                  "value": "--primary-color"
                }
              }
            }
          ],
  
          "disabled": [
            {
              "label": "Radio Button Dot Color",
              "type": "color",
              "config": {
                "default": {
                  "key": "--radio-disabled-color",
                  "value": "--gray-darker-color"
                }
              }
            },
  
            {
              "label": "Checkbox Button Fill Color",
              "type": "color",
              "config": {
                "default": {
                  "key": "--radio-disabled-bg-color",
                  "value": "--gray-lightest-color"
                }
              }
            }
          ],
  
          "error": [
            {
              "label": "Radio Button Fill Color",
              "type": "color",
              "config": {
                "default": {
                  "key": "--radio-error-bg",
                  "value": "$form-danger"
                }
              }
            }
          ],

          "focus": [
            {
                "label": "Radio Focus Fill Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--radio-focus-bg",
                    "value": "--primary-color"
                  }
                }
              },

            {
                "label": "Radio Focus Outline Width",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--radio-focus-outline-width",
                    "value": ""
                  }
                }
              },
             
              {
                "label": "Radio Focus Outline Offset",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--radio-focus-outline-offset",
                    "value": ""
                  }
                }
              },

              {
                "label": "Radio Focus Outline Style",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--radio-focus-outline-style",
                    "value": ""
                  }
                }
              },

              {
                "label": "Radio Focus Outline Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--radio-focus-outline-color",
                    "value": "--black-color"
                  }
                }
              }
          ]
        }
      }
    }
  }
  