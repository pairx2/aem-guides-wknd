{
    "_search-bar": {
      "selector": ".m-search-bar",
      "title": "Search Bar",
      "groups": {
        "search": {
          "default-state": [
            {
              "label": "Input Border",
              "type": "border",
              "config": {
                "default": {
                    "key": "--searchbar-input-border",
                    "value": "1px solid --gray-darkest-color"
                }
              }
            },

            {
                "label": "Input Background Fill Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--searchbar-input-bg-color",
                    "value": "--white-color"
                  }
                }
            },

            {
                "label": "Input Text Size",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--searchbar-input-font-size",
                    "value": ""
                  }
                }
            },

            {
                "label": "Input Width",
                "type": "unit",
                "config": {
                  "isResponsive": true,
                  "default": {
                    "key": "--searchbar-lg-input-width",
                    "value": "616px"
                  },
                  "tablet": {
                    "key": "--searchbar-md-input-width",
                    "value": "520px"
                  },
                  "mobile": {
                    "key": "--searchbar-input-width",
                    "value": "280px"
                  }
                }
            },

            {
                "label": "Input Height",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--searchbar-input-height",
                    "value": "48px"
                  }
                }
            },

            {
                "label": "Input Line Height",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--searchbar-input-line-height",
                    "value": ""
                  }
                }
            },

            {
                "label": "Input Margin",
                "type": "TRBL",
                "config": {
                  "isMultiVariable": true,
                  "default": {
                    "right": {
                      "key": "--searchbar-input-margin-right",
                      "value": "16px"
                    }
                  }
                }
            },

            {
                "label": "Input Padding",
                "type": "TRBL",
                "config": {
                  "default": {
                      "key": "--searchbar-input-padding",
                      "value": ""
                    }
                }
            },

            {
              "label": "Input Padding (RTL)",
              "type": "TRBL",
              "config": {
                "default": {
                    "key": "--searchbar-rtl-input-padding",
                    "value": ""
                  }
              }
          },

            {
                "label": "Close Icon Color",
                "type": "color",
                "config": {
                  "default": {
                      "key": "--searchbar-close-icon-color",
                      "value": "--black-color"
                    }
                }
            },

            {
                "label": "Icon Width",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--searchbar-close-icon-width",
                    "value": "16px"
                  }
                }
            },

            {
                "label": "Icon Height",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--searchbar-close-icon-height",
                    "value": "16px"
                  }
                }
            }


          ],
          "focus":[
            {
                "label": "Input Border",
                "type": "color",
                "config": {
                  "default": {
                      "key": "--searchbar-input-focus-border-color",
                      "value":"--primary-color"
                  }
                }
              }

          ]
        },
        "auto-complete":{
            "default-state":[
                {
                    "label": "List Background Fill Color",
                    "type": "color",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-background",
                        "value": ""
                      }
                    }
                },

                {
                    "label": "List Border Radius",
                    "type": "TRBL",
                    "config": {
                      "isBorderRadius": true,
                      "default": {
                        "key": "--searchbar-autocomplete-border-radius",
                        "value": "4px"
                      }
                    }
                },

                {
                    "label": "Shadow",
                    "type": "shadow",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-box-shadow",
                        "value": ""
                      }
                    }
                },

                {
                    "label": "List Padding",
                    "type": "TRBL",
                    "config": {
                      "default": {
                        "key": "--searchbar-suggestion-list-padding",
                        "value": "14px"
                      }
                    }
                },

                {
                    "label": "List Max-Height",
                    "type": "unit",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-max-height",
                        "value": "300px"
                      }
                    }
                },

                {
                    "label": "Item Border Bottom",
                    "type": "border",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-item-border-bottom",
                        "value": "1px solid --gray-dark-color"
                      }
                    }
                },

                {
                    "label": "Item Padding",
                    "type": "TRBL",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-item-padding",
                        "value": ""
                      }
                    }
                },

                {
                    "label": "Item Hover Background Color",
                    "type": "color",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-item-hover-bg",
                        "value": "--secondary-color"
                      }
                    }
                },

                {
                    "label": "Item Selected Background Color",
                    "type": "color",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-item-selected-bg",
                        "value": "--secondary-color"
                      }
                    }
                },

                {
                    "label": "Scrollbar Handle Border Radius",
                    "type": "TRBL",
                    "config": {
                      "isBorderRadius": true,
                      "default": {
                        "key": "--searchbar-autocomplete-scrollbar-thumb-border-radius",
                        "value": "10px"
                      }
                    }
                },

                {
                    "label": "Scrollbar Handle Fill Color",
                    "type": "color",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-scrollbar-thumb-bg",
                        "value": "--gray-light-color"
                      }
                    }
                },


                {
                    "label": "Scrollbar Track Border",
                    "type": "border",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-scrollbar-track-border",
                        "value": "1px solid --gray-light-color"
                      }
                    }
                },


                {
                    "label": "Scrollbar Track Border Radius",
                    "type": "TRBL",
                    "config": {
                      "isBorderRadius": true,
                      "default": {
                        "key": "--searchbar-autocomplete-scrollbar-track-border-radius",
                        "value": "4px"
                      }
                    }
                },

                {
                    "label": "Scrollbar Width",
                    "type": "unit",
                    "config": {
                      "default": {
                        "key": "--searchbar-autocomplete-scrollbar-width",
                        "value": "8px"
                      }
                    }
                }
            ]
        }
    }
  }
}
