{
    "_search-results": {
        "selector": ".o-search-res",
        "title": "Search Results",
        "variables": [
            {
                "label": "Background Fill Color",
                "type": "color",
                "config": {
                    "default": {
                        "key": "--search-results-background-color",
                        "value": "--white-color"
                    }
                }
            },
            {
                "label": "Border Bottom",
                "type": "border",
                "config": {
                    "default": {
                        "key": "--search-results-border-bottom",
                        "value": "1px solid --gray-color"
                    }
                }
            },
            {
                "label": "Header Text Size",
                "type": "unit",
                "config": {
                  "isResponsive": true,
                    "mobile": {
                        "key": "--search-results-mobile-title-font-size",
                        "value": ""
                    }
                }
            },
            {
                "label": "Header Line Height",
                "type": "unit",
                "config": {
                  "isResponsive": true,
                    "mobile": {
                        "key": "--search-results-mobile-title-line-height",
                        "value": ""
                    }
                }
            },
            {
                "label": "Header Margin",
                "type": "TRBL",
                "config": {
                    "isMultiVariable": true,
                    "default": {
                        "bottom": {
                            "key": "--search-results-header-bottom",
                            "value": ""
                        }
                    }
                }
            },
            {
                "label": "Search Bar Margin",
                "type": "TRBL",
                "config": {
                    "default": {
                        "key": "--search-results-search-bar-spacing",
                        "value": ""
                    }
                }
            },
            {
                "label": "Pagination Margin",
                "type": "TRBL",
                "config": {
                    "default": {
                        "key": "--search-results-pagination-spacing",
                        "value": ""
                    }
                }
            }
        ]
    }
}
