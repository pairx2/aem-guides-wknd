{
  "_search": {
    "selector": ".a-search",
    "title": "Search",
    "variables": [
      {
        "label": "Input Text Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--search-input-color",
            "value": "--black-color"
          }
        }
      },

      {
        "label": "Input Text Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--search-input-font-size",
            "value": ""
          }
        }
      },

      {
        "label": "Input Line Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--search-input-line-height",
            "value": ""
          }
        }
      },

      {
        "label": "Background Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--search-input-bg",
            "value": "--white-color"
          }
        }
      },

      {
        "label": "Border Radius",
        "type": "TRBL",
        "config": {
          "isBorderRadius": true,
          "default": {
            "key": "--search-input-border-radius",
            "value": "4px"
          }
        }
      },

      {
        "label": "Padding",
        "type": "TRBL",
        "config": {
          "default": {
            "key": "--search-input-padding",
            "value": "4px"
          }
        }
      },

      {
        "label": "Icon Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--search-input-icon-font-size",
            "value": "1rem"
          }
        }
      }

    ]
  }
}
