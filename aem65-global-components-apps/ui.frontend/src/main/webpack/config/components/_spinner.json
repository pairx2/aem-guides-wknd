{
    "_spinner": {
        "selector": ".a-spinner",
        "title": "Spinner",
        "groups": {
            "default-appearance": {
                "default-state": [
                    {
                      "label": "Border Color",
                      "type": "color",
                      "config": {
                          "default": {
                              "key": "--spinner-border-color",
                              "value": "--primary-color"
                          }
                      }
                  },
                    {
                        "label": "Width",
                        "type": "unit",
                        "config": {
                            "isResponsive": true,
                            "default": {
                                "key": "--spinner-width",
                                "value": "2rem"
                            },
                            "mobile": {
                                "key": "--spinner-width-sm",
                                "value": "1rem"
                            }
                        }
                    },
                    {
                        "label": "Height",
                        "type": "unit",
                        "config": {
                            "isResponsive": true,
                            "default": {
                                "key": "--spinner-height",
                                "value": "2rem"
                            },
                            "mobile": {
                                "key": "--spinner-height-sm",
                                "value": "$spinner-width-sm"
                            }
                        }
                    }
                ]
            }
        }
    }
}
