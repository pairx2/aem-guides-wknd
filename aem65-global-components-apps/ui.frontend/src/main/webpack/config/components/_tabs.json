{
    "_tabs": {
      "selector": ".a-tabs",
      "title": "Tabs",
      "groups": {
        "default-appearance": {
          "default-state": [
            {
              "label": "Tab Text Style",
              "type": "unit",
              "config": {
                "default": {
                  "key": "--tabs-nav-font-size",
                  "value": ""
                }
              }
            },

            {
                "label": "Tab Bottom Border Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-nav-link-border-bottom-color",
                    "value": "--gray-darker-color"
                  }
                }
            },

            {
              "label": "Tab Text Line Height",
              "type": "unit",
              "config": {
                "default": {
                  "key": "--tabs-nav-line-height",
                  "value": ""
                }
              }
            },

            {
                "label": "Tab Padding",
                "type": "TRBL",
                "config": {
                  "isMultiVariable":true,
                  "default": {
                    "bottom":{
                      "key": "--tabs-nav-padding",
                      "value": ""
                    }
                  }
                }
            },

            {
                "label": "Icon Size",
                "type": "unit",
                "config": {
                  "default": {
                    "key": "--tabs-icon-size",
                    "value": ""
                  }
                }
            },

            {
                "label": "Icon Margin",
                "type": "TRBL",
                "config": {
                  "default": {
                    "key": "--tabs-icon-margin",
                    "value": ""
                  }
                }
            },

            {
                "label": "Icon Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-icon-color",
                    "value": "--gray-darker-color"
                  }
                }
            },

            {
                "label": "Icon Success Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-icon-success",
                    "value": "--success-color"
                  }
                }
            },

            {
                "label": "Icon Warning Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-icon-warning",
                    "value": "--secondary-color"
                  }
                }
            },

            {
                "label": "Icon Danger Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-icon-danger",
                    "value": "--danger-color"
                  }
                }
            },

            {
                "label": "Tab Bar Padding",
                "type": "TRBL",
                "config": {
                  "default": {
                    "key": "--tabs-nav-link-padding",
                    "value": ""
                  }
                }
            }
          ],

          "Hover":[
            {
                "label": "Tab Background Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-nav-link-hover-bg",
                    "value": "--secondary-color"
                  }
                }
            }

          ],

          "Active (Pressed)":[
            {
                "label": "Tab Text Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-nav-link-border-bottom-color-active",
                    "value": "--primary-color"
                  }
                }
            },

            {
                "label": "Tab Bottom Border Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-nav-link-color-active",
                    "value": "--primary-color"
                  }
                }
            },

            {
                "label": "Icon Color",
                "type": "color",
                "config": {
                  "default": {
                    "key": "--tabs-icon-active-color",
                    "value": "--primary-color"
                  }
                }
            }

          ]
        }
      }
    }
  }
