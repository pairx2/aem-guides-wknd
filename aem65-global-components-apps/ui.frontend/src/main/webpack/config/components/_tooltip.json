{
  "_tooltip": {
    "selector": ".a-tooltip",
    "title": "Tooltip",
    "variables": [
      {
        "label": "Background Fill Color",
        "type": "color",
        "config": {
          "default": {
            "key": "--tooltip-bg",
            "value": "--white-color"
          }
        }
      },
      {
        "label": "Background Fill Color (Dark)",
        "type": "color",
        "config": {
          "default": {
            "key": "--tooltip-dark-bg",
            "value": "--black-color"
          }
        }
      },
      {
        "label": "Border Radius",
        "type": "TRBL",
        "config": {
          "isBorderRadius": true,
          "default": {
            "key": "--tooltip-border-radius",
            "value": ""
          }
        }
      },
      {
        "label": "Shadow",
        "type": "shadow",
        "config": {
          "default": {
            "key": "--tooltip-box-shadow",
            "value": "$base-box-shadow"
          }
        }
      },
      {
        "label": "Padding",
        "type": "TRBL",
        "config": {
          "isXY": true,
          "default": {
            "top": {
              "key": "--tooltip-padding-y",
              "value": ""
            },
            "right": {
              "key": "--tooltip-padding-x",
              "value": ""
            }
          }
        }
      },
      {
        "label": "Title Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--tooltip-h5-font-size",
            "value": ""
          }
        }
      },
      {
        "label": "Text Font Size",
        "type": "unit",
        "config": {
          "default": {
            "key": "--tooltip-font-size",
            "value": ""
          }
        }
      },
      {
        "label": "Text Line Height",
        "type": "unit",
        "config": {
          "default": {
            "key": "--tooltip-line-height",
            "value": ""
          }
        }
      }
    ]
  }
}
